---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import { BRAND_NAME } from "../config/site";

const title = `Lekcje indywidualne w Legionowie i online | ${BRAND_NAME}`;
const description =
  "Lekcje indywidualne języków obcych i matematyki w Legionowie oraz online. Diagnoza poziomu, plan nauki i elastyczne terminy.";

const forWhom = [
  "Osoby, które potrzebują indywidualnego tempa i planu.",
  "Kursanci z konkretnym celem: praca, egzamin, wyjazd.",
  "Osoby wracające do nauki po przerwie.",
  "Ci, którzy chcą maksymalnej uwagi lektora.",
];

const steps = [
  {
    title: "Konsultacja i diagnoza",
    text: "Sprawdzamy poziom, cel i preferowany tryb zajęć. Ustalamy priorytety.",
  },
  {
    title: "Plan i materiały",
    text: "Tworzymy plan nauki oraz dobieramy materiały dopasowane do Ciebie.",
  },
  {
    title: "Lekcje + feedback",
    text: "Regularne spotkania i krótkie podsumowania po zajęciach.",
  },
];

const formats = [
  {
    title: "1:1 z lektorem",
    text: "Pełne skupienie na Twoich celach i najszybszy postęp.",
  },
  {
    title: "Duet",
    text: "Dwie osoby na podobnym poziomie — więcej rozmów i motywacji.",
  },
  {
    title: "Trójka",
    text: "Mała grupa z większą dynamiką i korzystną ceną.",
  },
];
---

<MainLayout title={title} description={description}>
  <section class="hero-bg">
    <div class="container-site py-16 sm:py-20">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="kicker">Lekcje indywidualne</span>
          <h1 class="mt-6">Lekcje indywidualne w Legionowie i online</h1>
          <p class="mt-6 max-w-2xl text-lg">
            Skupiamy się na Twoim celu i tempie nauki. Konsultacja, diagnoza poziomu i spójny plan prowadzą
            do regularnych postępów — stacjonarnie lub online.
          </p>
          <div class="mt-8 flex flex-wrap gap-3">
            <a class="btn btn-primary" href="/kontakt">Umów konsultację</a>
            <a class="btn btn-secondary" href="/cennik">Zobacz cennik</a>
          </div>
        </div>
        <div class="card p-6">
          <h2 class="text-2xl font-extrabold tracking-tight">Dla kogo to rozwiązanie?</h2>
          <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-600">
            {forWhom.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <h2>Jak pracujemy</h2>
      <p class="mt-4 max-w-3xl">
        Pierwsze spotkanie to diagnoza poziomu i rozmowa o celu. Na tej podstawie ustalamy plan nauki.
      </p>
      <div class="mt-8 grid gap-6 lg:grid-cols-3">
        {steps.map((step) => (
          <div class="card p-6">
            <h3 class="text-lg font-extrabold text-slate-900">{step.title}</h3>
            <p class="mt-3 text-sm text-slate-600">{step.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section section-muted">
    <div class="container-site">
      <h2>Formaty zajęć</h2>
      <p class="mt-4 max-w-3xl">
        Wybierz format dopasowany do budżetu i preferowanego stylu nauki.
      </p>
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        {formats.map((format) => (
          <div class="card p-6">
            <h3 class="text-lg font-extrabold text-slate-900">{format.title}</h3>
            <p class="mt-3 text-sm text-slate-600">{format.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTASection
    title="Chcesz zacząć indywidualnie?"
    description="Umów konsultację i diagnozę poziomu — zaproponujemy plan oraz najlepszy format zajęć."
    primaryLabel="Umów konsultację"
    primaryHref="/kontakt"
    secondaryLabel="Zobacz cennik"
    secondaryHref="/cennik"
  />
</MainLayout>
