---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import { BRAND_NAME, generateBreadcrumbSchema } from "../config/site";

const title = `O nas – szkoła języka angielskiego Legionowo | ${BRAND_NAME}`;
const description =
  "Poznaj szkołę Lingua Legionowo. Kursy angielskiego stacjonarnie i online. Uczymy praktycznie, z naciskiem na mówienie i konwersacje.";

const values = [
  {
    title: "Praktyka zamiast teorii",
    text: "Zależy nam, abyś mówił swobodnie. Gramatyka jest ważna, ale tylko wtedy, gdy pomaga w komunikacji.",
  },
  {
    title: "Realne sytuacje językowe",
    text: "Ćwiczymy dialogi i słownictwo, które przydadzą się w pracy, podróży i codziennych rozmowach.",
  },
  {
    title: "Stały feedback",
    text: "Po każdej lekcji wiesz, co poprawić i nad czym pracować dalej.",
  },
];

const process = [
  "Diagnoza poziomu i celów",
  "Plan nauki i harmonogram",
  "Lekcje stacjonarne lub online",
  "Regularne podsumowania",
];

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Strona główna", url: "/" },
  { name: "O nas" },
]);
---

<MainLayout title={title} description={description} canonical="/o-nas" structuredData={[breadcrumbSchema]}>
  <section class="hero-bg">
    <div class="container-site py-16 sm:py-20">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-start">
        <div>
          <span class="kicker">O nas</span>
          <h1 class="mt-6">Szkoła języka angielskiego w Legionowie</h1>
          <p class="mt-6 max-w-2xl text-lg">
            {BRAND_NAME} to lokalna szkoła językowa, w której najważniejsze jest praktyczne użycie języka.
            Oferujemy zajęcia stacjonarne w Legionowie oraz lekcje online dla osób spoza Legionowa.
            Pomagamy kursantom przejść od pasywnego rozumienia do swobodnej komunikacji.
          </p>
          <div class="mt-8 flex flex-wrap gap-3">
            <a class="btn btn-primary" href="/kontakt">Porozmawiaj z nami</a>
            <a class="btn btn-secondary" href="/opinie">Zobacz opinie</a>
          </div>
          <p class="mt-4 text-sm text-slate-500">
            Interesuje Cię oferta? Sprawdź
            <a class="font-bold text-primary no-underline hover:underline" href="/cennik">cennik</a>.
          </p>
        </div>

        <div class="card p-6">
          <h2 class="text-2xl font-extrabold tracking-tight">Jak pracujemy</h2>
          <ol class="mt-4 space-y-3 text-sm text-slate-600">
            {process.map((step, index) => (
              <li class="flex items-start gap-3">
                <span class="mt-0.5 inline-flex h-6 w-6 items-center justify-center rounded-full bg-primary/10 text-xs font-bold text-primary">
                  {index + 1}
                </span>
                <span>{step}</span>
              </li>
            ))}
          </ol>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <h2>Dlaczego kursanci zostają na dłużej</h2>
      <p class="mt-4 max-w-3xl">
        Dobrze zaplanowana nauka daje spokój i przewidywalne efekty. Stawiamy na jasny plan i realne postępy.
      </p>

      <div class="mt-8 grid gap-6 lg:grid-cols-3">
        {values.map((value) => (
          <div class="card p-6">
            <h3 class="text-lg font-extrabold text-slate-900">{value.title}</h3>
            <p class="mt-3 text-sm text-slate-600">{value.text}</p>
          </div>
        ))}
      </div>

      <div class="mt-8">
        <a class="btn btn-secondary" href="/angielski-stacjonarnie">Zajęcia stacjonarne</a>
      </div>
    </div>
  </section>

  <section class="section section-muted">
    <div class="container-site">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-start">
        <div>
          <h2>Nasza oferta</h2>
          <p class="mt-4">
            Prowadzimy zajęcia stacjonarne w naszej szkole w Legionowie oraz lekcje online dla osób,
            które preferują naukę zdalną. Dopasowujemy formę zajęć do Twoich potrzeb i możliwości.
          </p>
        </div>
        <div class="card p-6">
          <h3 class="text-lg font-extrabold text-slate-900">Najczęstsze cele kursantów</h3>
          <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-600">
            <li>Swobodna komunikacja w pracy.</li>
            <li>Lepsza płynność w rozmowach.</li>
            <li>Rozumienie ze słuchu bez napięcia.</li>
            <li>Odświeżenie gramatyki i słownictwa.</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <CTASection
    title="Chcesz sprawdzić, czy to podejście jest dla Ciebie?"
    description="Umów bezpłatną konsultację i diagnozę poziomu w naszej szkole w Legionowie lub online."
  />
</MainLayout>
