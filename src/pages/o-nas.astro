---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import {
  BRAND_NAME,
  CTA_PRIMARY_HREF,
  CTA_PRIMARY_LABEL,
  CTA_PRIMARY_REL,
  CTA_PRIMARY_TARGET,
  generateBreadcrumbSchema,
} from "../config/site";

const title = `O nas – szkoła językowa i matematyka w Legionowie | ${BRAND_NAME}`;
const description =
  "Poznaj szkołę Lingua Legionowo. Kursy językowe i matematyka stacjonarnie w Legionowie oraz online. Praktyczne zajęcia z jasnym planem nauki.";

const values = [
  {
    title: "Praktyka zamiast teorii",
    text: "Zależy nam, abyś mówił swobodnie. Gramatyka jest ważna, ale tylko wtedy, gdy pomaga w komunikacji.",
  },
  {
    title: "Realne sytuacje językowe",
    text: "Ćwiczymy dialogi i słownictwo, które przydadzą się w pracy, podróży i codziennych rozmowach.",
  },
  {
    title: "Stały feedback",
    text: "Po każdej lekcji wiesz, co poprawić i nad czym pracować dalej.",
  },
];

const process = [
  "Diagnoza poziomu i celów",
  "Plan nauki i harmonogram",
  "Lekcje stacjonarne lub online",
  "Regularne podsumowania",
];

const standards = [
  {
    title: "Diagnoza na starcie",
    text: "Poznajemy Twój poziom, cel i sposób nauki, aby dobrze dopasować plan.",
  },
  {
    title: "Plan w jasno opisanych krokach",
    text: "Ustalamy zakres, tematy i rytm spotkań, żebyś widział postęp.",
  },
  {
    title: "Materiały po każdej lekcji",
    text: "Dostajesz podsumowanie, słownictwo i krótkie zadania do utrwalenia.",
  },
  {
    title: "Regularny feedback",
    text: "Wiesz, co już działa dobrze i co wymaga ćwiczeń.",
  },
];

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Strona główna", url: "/" },
  { name: "O nas" },
]);

---

<MainLayout
  title={title}
  description={description}
  canonical="/o-nas"
  structuredData={[breadcrumbSchema]}
>
  <section class="bg-hero-gradient">
    <div class="mx-auto w-full max-w-7xl px-6 py-10 sm:py-14">
      <div class="grid gap-8 lg:grid-cols-2 lg:items-start">
        <div>
          <span class="kicker">O nas</span>
          <h1 class="mt-4">Poznaj Lingua Legionowo — szkoła języków obcych i matematyki</h1>
          <p class="mt-4 max-w-2xl text-lg text-slate-600">
            {BRAND_NAME} to lokalna szkoła językowa, w której liczy się praktyka i systematyczny postęp.
            Oferujemy zajęcia stacjonarne w Legionowie oraz lekcje online. Zaczynamy od krótkiej diagnozy,
            a następnie układamy plan nauki dopasowany do celu.
          </p>
          <div class="mt-8">
            <a class="btn btn-primary" href="/opinie">Zobacz opinie</a>
          </div>
          <p class="mt-4 text-sm text-slate-500">
            Interesuje Cię oferta? Sprawdź
            <a class="font-bold text-primary no-underline hover:underline" href="/cennik">cennik</a
            >.
          </p>
        </div>

        <div class="card p-6">
          <h2 class="text-lg font-bold tracking-tight">Jak pracujemy</h2>
          <ol class="mt-4 space-y-3 text-sm text-slate-600">
            {
              process.map((step, index) => (
                <li class="flex items-start gap-3">
                  <span class="mt-0.5 inline-flex h-6 w-6 items-center justify-center rounded-full bg-primary/10 text-xs font-bold text-primary">
                    {index + 1}
                  </span>
                  <span>{step}</span>
                </li>
              ))
            }
          </ol>
        </div>
      </div>
    </div>
  </section>

  <section class="py-10 lg:py-14">
    <div class="mx-auto w-full max-w-7xl px-6">
      <h2>Dlaczego kursanci zostają na dłużej</h2>
      <p class="mt-4 max-w-3xl text-slate-600">
        Dobrze zaplanowana nauka daje spokój i przewidywalne efekty. Stawiamy na jasny plan i realne
        postępy.
      </p>

      <div class="mt-10 grid gap-5 lg:grid-cols-3">
        {
          values.map((value) => (
            <div class="card p-6">
              <h3 class="text-base font-bold text-slate-900">{value.title}</h3>
              <p class="mt-3 text-sm text-slate-600">{value.text}</p>
            </div>
          ))
        }
      </div>

      <div class="mt-8">
        <a class="btn btn-secondary" href="/oferta" data-track="cta_secondary" data-track-label="Zobacz ofertę">
          Zobacz ofertę
        </a>
      </div>
    </div>
  </section>

  <section class="py-10 lg:py-14">
    <div class="mx-auto w-full max-w-7xl px-6">
      <h2>Nasze standardy pracy</h2>
      <p class="mt-4 max-w-3xl text-slate-600">
        Stawiamy na jasne zasady współpracy i mierzalne efekty. Poniżej znajdziesz elementy, które
        dostajesz w standardzie.
      </p>
      <div class="mt-10 grid gap-5 md:grid-cols-2 lg:grid-cols-4">
        {
          standards.map((item) => (
            <div class="card p-6">
              <h3 class="text-base font-bold text-slate-900">{item.title}</h3>
              <p class="mt-3 text-sm text-slate-600">{item.text}</p>
            </div>
          ))
        }
      </div>
      <div class="mt-8">
        <a class="btn btn-secondary" href="/kontakt" data-track="cta_secondary" data-track-label="Zapytaj o plan nauki">
          Zapytaj o plan nauki
        </a>
      </div>
    </div>
  </section>

  <section class="py-10 lg:py-14 bg-slate-50/60">
    <div class="mx-auto w-full max-w-7xl px-6">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-start">
        <div>
          <h2>Nasza oferta</h2>
          <p class="mt-4">
            Prowadzimy zajęcia stacjonarne w naszej szkole w Legionowie oraz lekcje online dla osób,
            które preferują naukę zdalną. Dopasowujemy formę zajęć do Twoich potrzeb i możliwości.
          </p>
        </div>
        <div class="card p-6">
          <h3 class="text-base font-bold text-slate-900">Najczęstsze cele kursantów</h3>
          <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-600">
            <li>Swobodna komunikacja w pracy.</li>
            <li>Lepsza płynność w rozmowach.</li>
            <li>Rozumienie ze słuchu bez napięcia.</li>
            <li>Odświeżenie gramatyki i słownictwa.</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <CTASection
    title="Chcesz sprawdzić, czy to podejście jest dla Ciebie?"
    description="Umów bezpłatną konsultację i diagnozę poziomu w naszej szkole w Legionowie lub online."
  />
</MainLayout>
