---
import MainLayout from "../layouts/MainLayout.astro";
import { BRAND_NAME } from "../config/site";

const target = "/angielski-online#kurs";
const title = `Kurs angielskiego online — przekierowanie | ${BRAND_NAME}`;
const description = "Ta strona została przeniesiona do sekcji kursu online.";
---

<MainLayout title={title} description={description} canonical="/angielski-online">
  <Fragment slot="head">
    <meta http-equiv="refresh" content={`0;url=${target}`} />
  </Fragment>

  <section class="section">
    <div class="container-site">
      <h1>Przekierowanie…</h1>
      <p class="mt-4 text-slate-600">
        Jeśli przekierowanie nie nastąpi automatycznie, kliknij poniższy przycisk.
      </p>
      <div class="mt-6">
        <a class="btn btn-primary" href={target}>Przejdź do kursu online</a>
      </div>
    </div>
  </section>
</MainLayout>
