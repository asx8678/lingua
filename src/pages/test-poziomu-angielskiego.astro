---
import MainLayout from "../layouts/MainLayout.astro";
import TestPoziomu from "../components/TestPoziomu.astro";
import { BRAND_NAME, generateBreadcrumbSchema } from "../config/site";

const title = `Test poziomu angielskiego online – sprawdź za darmo | ${BRAND_NAME}`;
const description =
  "Darmowy test poziomu angielskiego online. Ponad 1000 pytań, tryb adaptacyjny, natychmiastowy wynik z rekomendacją kursu. Poziomy A1–C2.";

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Strona główna", url: "/" },
  { name: "Test poziomu angielskiego" },
]);
---

<MainLayout
  title={title}
  description={description}
  canonical="/test-poziomu-angielskiego"
  structuredData={[breadcrumbSchema]}
>
  <div class="container-site py-6">
    <div class="mb-4 flex items-center gap-3">
      <a href="/" class="text-sm text-slate-500 hover:text-primary">Strona główna</a>
      <span class="text-slate-300">/</span>
      <span class="text-sm font-semibold text-slate-700">Test poziomu angielskiego</span>
    </div>
    <TestPoziomu bankUrl="/question-bank-1200.json" />
  </div>
</MainLayout>

<style is:global>
  /* Override test styles to match site design */
  .ll-test {
    max-width: 100%;
  }

  .ll-card {
    padding: 20px;
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    background: #fff;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.05), 0 2px 4px -2px rgb(0 0 0 / 0.05);
  }

  @media (min-width: 640px) {
    .ll-card {
      padding: 32px;
      border-radius: 20px;
    }
  }

  /* New intro styles */
  .ll-intro-header {
    text-align: center;
    margin-bottom: 24px;
  }

  .ll-intro-header h1 {
    font-size: 1.75rem;
    font-weight: 800;
    color: #0f172a;
    margin: 0;
  }

  @media (min-width: 640px) {
    .ll-intro-header h1 {
      font-size: 2.25rem;
    }
  }

  .ll-intro-sub {
    color: #64748b;
    font-size: 1rem;
    margin-top: 8px;
  }

  .ll-intro-features {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
    margin-bottom: 28px;
  }

  .ll-feature {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.875rem;
    color: #475569;
    font-weight: 500;
  }

  .ll-feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background: rgba(34, 197, 94, 0.15);
    color: #16a34a;
    border-radius: 50%;
    font-size: 0.7rem;
    font-weight: 700;
  }

  .ll-intro-settings {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
    margin-bottom: 28px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 640px) {
    .ll-intro-settings {
      grid-template-columns: repeat(3, 1fr);
      max-width: 100%;
    }
  }

  .ll-intro-option {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 14px 16px;
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
  }

  .ll-option-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 8px;
  }

  .ll-intro-label {
    font-weight: 700;
    font-size: 0.8rem;
    color: #334155;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .ll-option-hint {
    font-size: 0.75rem;
    color: #94a3b8;
    font-weight: 500;
  }

  .ll-intro-option select {
    padding: 10px 12px;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    background: #fff;
    cursor: pointer;
    width: 100%;
  }

  .ll-intro-option select:focus {
    outline: none;
    border-color: #0052CC;
    box-shadow: 0 0 0 3px rgba(0, 82, 204, 0.1);
  }

  .ll-intro-cta {
    text-align: center;
    margin-bottom: 24px;
  }

  .ll-btn--large {
    padding: 16px 32px;
    font-size: 1rem;
    font-weight: 800;
    width: 100%;
    max-width: 280px;
    min-height: 52px;
  }

  @media (min-width: 640px) {
    .ll-btn--large {
      padding: 16px 48px;
      font-size: 1.1rem;
      width: auto;
    }
  }

  .ll-intro-info {
    max-width: 500px;
    margin: 0 auto;
  }

  .ll-intro-details {
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    background: #f8fafc;
  }

  .ll-intro-details summary {
    padding: 14px 18px;
    cursor: pointer;
    font-weight: 700;
    font-size: 0.9rem;
    color: #334155;
    list-style: none;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ll-intro-details summary::before {
    content: "?";
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background: #0052CC;
    color: #fff;
    border-radius: 50%;
    font-size: 0.75rem;
    font-weight: 700;
  }

  .ll-intro-details summary::-webkit-details-marker {
    display: none;
  }

  .ll-intro-details-content {
    padding: 0 18px 18px;
    font-size: 0.875rem;
    color: #64748b;
    line-height: 1.6;
  }

  .ll-intro-details-content p {
    margin: 0 0 10px;
  }

  .ll-intro-details-content p:last-child {
    margin-bottom: 0;
  }

  .ll-intro-details-content strong {
    color: #334155;
  }

  .ll-intro-hide {
    display: none !important;
  }

  /* Quiz section - mobile-first compact layout */
  .ll-card--quiz {
    padding: 16px;
    max-width: 720px;
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .ll-card--quiz {
      padding: 24px 32px;
    }
  }

  .ll-quiz-header {
    margin-bottom: 20px;
  }

  .ll-quiz-header .ll-progress {
    height: 6px;
    margin-bottom: 12px;
  }

  .ll-quiz-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 8px;
    font-size: 0.85rem;
    color: #64748b;
  }

  .ll-quiz-meta-left {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .ll-quiz-counter {
    font-weight: 700;
    color: #334155;
    font-size: 0.9rem;
  }

  .ll-quiz-range {
    padding: 4px 10px;
    background: #f1f5f9;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.75rem;
    color: #64748b;
  }

  .ll-quiz-score {
    display: flex;
    gap: 12px;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .ll-score-good {
    color: #16a34a;
  }

  .ll-score-bad {
    color: #dc2626;
  }

  .ll-quiz-body {
    margin-bottom: 20px;
  }

  .ll-quiz-body .ll-q {
    font-size: 1.05rem;
    font-weight: 600;
    color: #1e293b;
    margin: 0 0 16px;
    line-height: 1.6;
  }

  .ll-quiz-body .ll-options {
    display: grid;
    gap: 10px;
    margin: 0;
  }

  .ll-quiz-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
    padding-top: 16px;
    border-top: 1px solid #f1f5f9;
  }

  .ll-quiz-nav-right {
    display: flex;
    gap: 8px;
  }

  /* Mobile: stack nav buttons if needed */
  @media (max-width: 400px) {
    .ll-quiz-nav {
      flex-wrap: wrap;
    }
    .ll-quiz-nav-right {
      width: 100%;
      justify-content: flex-end;
    }
  }

  .ll-btn--sm {
    padding: 10px 18px;
    font-size: 0.85rem;
    min-height: 44px; /* Touch-friendly */
  }

  .ll-card h1 {
    font-size: 1.75rem;
    font-weight: 800;
    color: #0f172a;
    line-height: 1.2;
  }

  @media (min-width: 640px) {
    .ll-card h1 {
      font-size: 2rem;
    }
  }

  .ll-muted {
    color: #64748b;
    opacity: 1;
  }

  .ll-btn {
    appearance: none;
    border: none;
    background: #0052CC;
    color: #fff;
    padding: 12px 24px;
    border-radius: 9999px;
    cursor: pointer;
    font-weight: 700;
    font-size: 0.875rem;
    transition: all 0.2s;
    box-shadow: 0 4px 6px -1px rgb(0 82 204 / 0.25);
  }

  .ll-btn:hover {
    background: #003d99;
    transform: translateY(-1px);
    box-shadow: 0 6px 10px -1px rgb(0 82 204 / 0.3);
  }

  .ll-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .ll-btn--ghost {
    background: transparent;
    color: #475569;
    border: 1px solid #e2e8f0;
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  }

  .ll-btn--ghost:hover {
    background: #f8fafc;
    border-color: #0052CC;
    color: #0052CC;
    transform: translateY(-1px);
  }

  .ll-progress {
    height: 8px;
    background: #e2e8f0;
    border-radius: 9999px;
    overflow: hidden;
  }

  .ll-progress__bar {
    height: 100%;
    background: linear-gradient(90deg, #0052CC 0%, #0066ff 100%);
    transition: width 0.3s ease;
  }

  .ll-option {
    display: flex;
    gap: 12px;
    align-items: center;
    padding: 14px 16px;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.15s;
    background: #fff;
    min-height: 48px; /* Touch-friendly */
    -webkit-tap-highlight-color: transparent;
  }

  .ll-option:hover {
    border-color: #0052CC;
    background: rgba(0, 82, 204, 0.03);
  }

  .ll-option:active {
    transform: scale(0.98);
  }

  .ll-option input[type="radio"] {
    width: 20px;
    height: 20px;
    accent-color: #0052CC;
    flex-shrink: 0;
  }

  .ll-option.is-right {
    border-color: #22c55e;
    background: rgba(34, 197, 94, 0.08);
  }

  .ll-option.is-correct {
    border-color: #22c55e;
    background: rgba(34, 197, 94, 0.08);
  }

  .ll-option.is-wrong {
    border-color: #ef4444;
    background: rgba(239, 68, 68, 0.05);
  }

  .ll-feedback {
    margin-top: 16px;
    padding: 16px;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .ll-feedback.good {
    background: rgba(34, 197, 94, 0.1);
    border-color: #22c55e;
  }

  .ll-feedback.good strong {
    color: #16a34a;
  }

  .ll-feedback.bad {
    background: rgba(239, 68, 68, 0.08);
    border-color: #ef4444;
  }

  .ll-feedback.bad strong {
    color: #dc2626;
  }

  .ll-badge {
    display: inline-flex;
    gap: 12px;
    align-items: baseline;
    padding: 14px 18px;
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    background: linear-gradient(135deg, rgba(0, 82, 204, 0.06) 0%, rgba(0, 82, 204, 0.02) 100%);
  }

  .ll-badge strong {
    font-size: 1.75rem;
    color: #0052CC;
  }

  .ll-scale span {
    padding: 8px 14px;
    border: 1px solid #e2e8f0;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.15s;
  }

  .ll-scale span.is-active {
    background: #0052CC;
    color: #fff;
    border-color: #0052CC;
  }

  .ll-kpi,
  .ll-callout,
  .ll-review-item {
    padding: 16px;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    background: #fff;
  }

  .ll-callout {
    background: #f8fafc;
  }

  .ll-pill {
    display: inline-flex;
    padding: 4px 10px;
    border-radius: 9999px;
    border: 1px solid #e2e8f0;
    font-size: 0.8rem;
    font-weight: 600;
    background: #f1f5f9;
  }

  .ll-lead input,
  .ll-lead select {
    padding: 12px 14px;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    font-size: 0.95rem;
    transition: border-color 0.15s;
  }

  .ll-lead input:focus,
  .ll-lead select:focus {
    outline: none;
    border-color: #0052CC;
    box-shadow: 0 0 0 3px rgba(0, 82, 204, 0.1);
  }

  .ll-grid2 label {
    font-size: 0.9rem;
  }

  .ll-grid2 select {
    padding: 10px 12px;
    border-radius: 10px;
    border: 1px solid #e2e8f0;
    font-size: 0.9rem;
    background: #fff;
  }

  .ll-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9rem;
    margin-top: 10px;
  }

  .ll-table th,
  .ll-table td {
    text-align: left;
    padding: 10px 12px;
    border-bottom: 1px solid #e2e8f0;
  }

  .ll-table th {
    font-weight: 700;
    color: #334155;
    background: #f8fafc;
  }

  .ll-divider {
    border: 0;
    border-top: 1px solid #e2e8f0;
    margin: 24px 0;
  }

  .ll-q {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1e293b;
    margin: 14px 0 16px;
    line-height: 1.5;
  }

  .ll-reco a {
    color: #0052CC;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .ll-reco a:hover {
    color: #003d99;
  }

  .ll-status.is-error {
    color: #dc2626;
  }

  /* Improve link colors */
  .ll-card a:not(.ll-btn) {
    color: #0052CC;
  }

  .ll-card a:not(.ll-btn):hover {
    color: #003d99;
  }
</style>
