---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import TeacherCard from "../components/TeacherCard.astro";
import { teachers } from "../data/teachers";
import { taughtLanguages } from "../data/subjects";
import {
  BRAND_NAME,
  CTA_PRIMARY_HREF,
  CTA_PRIMARY_LABEL,
  CTA_PRIMARY_REL,
  CTA_PRIMARY_TARGET,
  generateBreadcrumbSchema,
} from "../config/site";

const languagesList = new Intl.ListFormat("pl", {
  style: "long",
  type: "conjunction",
}).format(taughtLanguages);

const title = `Nasi lektorzy – języki obce i matematyka w Legionowie | ${BRAND_NAME}`;
const description = `Poznaj zespół lektorów Lingua Legionowo. Uczymy ${languagesList} oraz matematyki stacjonarnie w Legionowie i online.`;

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Strona główna", url: "/" },
  { name: "Nasi lektorzy" },
]);

// Tailwind class constants
const btnBase = "inline-flex items-center justify-center gap-2 rounded-full px-6 py-2.5 text-sm font-medium transition-colors duration-150";
const btnPrimary = `${btnBase} bg-primary text-white hover:bg-primary-600`;
const btnSecondary = `${btnBase} border border-slate-200 bg-white text-slate-600 hover:bg-slate-50 hover:text-slate-800`;
const kicker = "text-base font-semibold uppercase tracking-wider text-primary";
---

<MainLayout
  title={title}
  description={description}
  canonical="/nasi-lektorzy"
  structuredData={[breadcrumbSchema]}
>
  <section class="section-hero section-muted">
    <div class="container-site">
      <div class="max-w-3xl">
        <span class={kicker}>Nasi lektorzy</span>
        <h1 class="mt-6">Poznaj zespół Lingua Legionowo</h1>
        <p class="mt-4 text-lg">
          Nasi lektorzy uczą języków obcych — {languagesList} — oraz matematyki. Zajęcia prowadzimy stacjonarnie
          w Legionowie i online, w małych grupach lub indywidualnie.
        </p>
        <div class="mt-6">
          <a class={btnPrimary} href="/oferta">Zobacz ofertę</a>
        </div>
      </div>

      <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        {
          teachers.map((teacher, index) => (
            <TeacherCard teacher={teacher} loading={index === 0 ? "eager" : "lazy"} />
          ))
        }
      </div>
    </div>
  </section>

  <CTASection
    title="Chcesz dobrać lektora do swojego celu?"
    description="Napisz, czego potrzebujesz — dopasujemy język, poziom i prowadzącego do Twojego celu."
    note="Odpowiadamy najszybciej, jak to możliwe."
  />
</MainLayout>
