---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import TeacherCard from "../components/TeacherCard.astro";
import { teachers } from "../data/teachers";
import { taughtLanguages } from "../data/subjects";
import {
  BRAND_NAME,
  CTA_PRIMARY_HREF,
  CTA_PRIMARY_LABEL,
  CTA_PRIMARY_REL,
  CTA_PRIMARY_TARGET,
  generateBreadcrumbSchema,
} from "../config/site";

const languagesList = new Intl.ListFormat("pl", {
  style: "long",
  type: "conjunction",
}).format(taughtLanguages);

const title = `Nasi lektorzy – języki obce i matematyka w Legionowie | ${BRAND_NAME}`;
const description = `Poznaj zespół lektorów Lingua Legionowo. Uczymy ${languagesList} oraz matematyki stacjonarnie w Legionowie i online.`;

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Strona główna", url: "/" },
  { name: "Nasi lektorzy" },
]);

// Tailwind class constants
const btnBase = "inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 text-sm font-bold transition-all duration-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary";
const btnPrimary = `${btnBase} bg-primary text-white shadow-md hover:bg-primary-700 hover:shadow-lg hover:-translate-y-0.5 active:translate-y-0 active:shadow-md`;
const btnSecondary = `${btnBase} border border-slate-200 bg-white text-slate-700 shadow-sm hover:border-primary/30 hover:text-primary hover:shadow-md hover:-translate-y-0.5 active:translate-y-0`;
const kicker = "inline-block rounded-full bg-primary/10 px-4 py-1.5 text-xs font-bold uppercase tracking-widest text-primary";
---

<MainLayout
  title={title}
  description={description}
  canonical="/nasi-lektorzy"
  structuredData={[breadcrumbSchema]}
>
  <section class="py-16 lg:py-24 bg-primary/5">
    <div class="mx-auto w-full max-w-7xl px-6">
      <div class="max-w-3xl">
        <span class={kicker}>Nasi lektorzy</span>
        <h1 class="mt-6">Poznaj zespół Lingua Legionowo</h1>
        <p class="mt-4 text-lg">
          Nasi lektorzy uczą języków obcych — {languagesList} — oraz matematyki. Zajęcia prowadzimy stacjonarnie
          w Legionowie i online, w małych grupach lub indywidualnie.
        </p>
        <div class="mt-6">
          <a class={btnPrimary} href="/oferta">Zobacz ofertę</a>
        </div>
      </div>

      <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        {
          teachers.map((teacher, index) => (
            <TeacherCard teacher={teacher} loading={index === 0 ? "eager" : "lazy"} />
          ))
        }
      </div>
    </div>
  </section>

  <CTASection
    title="Chcesz dobrać lektora do swojego celu?"
    description="Napisz, czego potrzebujesz — dopasujemy język, poziom i prowadzącego do Twojego celu."
    note="Odpowiadamy zwykle w ciągu 1–2 dni roboczych."
  />
</MainLayout>
