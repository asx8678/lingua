---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import FaqSection from "../components/FaqSection.astro";
import TestimonialCard from "../components/TestimonialCard.astro";
import TrustSection from "../components/TrustSection.astro";
import testimonials from "../data/testimonials.json";
import {
  BRAND_NAME,
  CTA_PRIMARY_HREF,
  CTA_PRIMARY_LABEL,
  CTA_SECONDARY_HREF,
  CTA_SECONDARY_LABEL,
  generateBreadcrumbSchema,
} from "../config/site";

const title = `Angielski online – lekcje z lektorem | ${BRAND_NAME}`;
const description =
  "Skuteczny angielski online. Zajęcia 1:1 i grupowe, nacisk na mówienie. Umów bezpłatną konsultację.";

const benefits = [
  {
    title: "Lekcje na żywo",
    text: "Uczysz się z lektorem w czasie rzeczywistym — zero nagrań i przypadkowych ćwiczeń.",
  },
  {
    title: "Mówienie od pierwszych minut",
    text: "Każde spotkanie zaczyna się od krótkiej rozmowy i pracy na realnych sytuacjach.",
  },
  {
    title: "Materiał dopasowany do celu",
    text: "Praca, podróże, rozmowy biznesowe czy egzamin — plan dostosowujemy do Twoich potrzeb.",
  },
];

const lessonFormats = [
  {
    title: "Lekcje 1:1",
    text: "Cała uwaga lektora jest dla Ciebie. Tempo i zakres dobieramy indywidualnie.",
  },
  {
    title: "Mini-grupa 2-3 osoby",
    text: "Więcej rozmów, dynamiki i motywacji, bez chaosu dużej grupy.",
  },
  {
    title: "Konwersacje",
    text: "Skupiamy się na mówieniu, poprawie płynności i naturalnym brzmieniu wypowiedzi.",
  },
];

const lessonDetails = [
  "Każda lekcja ma cel i jasny temat.",
  "Ćwiczymy dialogi, które przydadzą się w pracy i życiu codziennym.",
  "Wprowadzamy gramatykę tam, gdzie jest potrzebna.",
  "Dostajesz podsumowanie i listę słów po spotkaniu.",
];

const lessonAreas = [
  "Płynność i swoboda wypowiedzi.",
  "Słownictwo branżowe i codzienne.",
  "Wymowa, akcent i intonacja.",
  "Gramatyka w rozmowach i mailach.",
];

const courseModules = [
  {
    title: "Diagnoza i cel",
    text: "Określamy poziom, potrzeby i sytuacje, w których używasz angielskiego.",
  },
  {
    title: "Komunikacja w praktyce",
    text: "Ćwiczymy mówienie na scenariuszach z pracy, podróży i codziennych rozmów.",
  },
  {
    title: "Gramatyka bez stresu",
    text: "Wyjaśniamy zasady na przykładach i od razu wykorzystujemy je w dialogach.",
  },
  {
    title: "Słownictwo tematyczne",
    text: "Budujemy aktywne słownictwo i uczymy się, jak używać go w zdaniach.",
  },
];

const courseOutcomes = [
  "Jasny plan na kolejne tygodnie, bez przypadkowych tematów.",
  "Regularne podsumowania i wskazówki, co poprawić.",
  "Materiały do powtórek między spotkaniami.",
  "Wzrost pewności w mówieniu i rozumieniu ze słuchu.",
];

const courseGoals = [
  "Swobodne rozmowy w pracy i na spotkaniach.",
  "Przygotowanie do wyjazdu lub relokacji.",
  "Odświeżenie gramatyki i uporządkowanie wiedzy.",
  "Budowanie pewności w mówieniu po dłuższej przerwie.",
];

const onlineTestimonial =
  testimonials.find((item) => item.featuredOnline) ??
  testimonials.find((item) => item.context.toLowerCase().includes("online")) ??
  testimonials[0];
const hasOnlineTestimonial = Boolean(onlineTestimonial);

const faqs = [
  {
    question: "Jak wygląda pierwsza lekcja online?",
    answer:
      "To krótka diagnoza poziomu i rozmowa o celu. Wspólnie ustalamy plan kolejnych spotkań.",
  },
  {
    question: "Czy muszę mieć dobre łącze internetowe?",
    answer: "Wystarczy stabilne Wi‑Fi i słuchawki z mikrofonem. Resztę konfigurujemy na start.",
  },
  {
    question: "Czy angielski online sprawdzi się przy niskim poziomie?",
    answer: "Tak. Zaczynamy od prostych dialogów i utrwalamy słownictwo w praktyce.",
  },
  {
    question: "Jakie platformy wykorzystujecie?",
    answer:
      "Dobieramy narzędzie, które jest dla Ciebie wygodne i działa stabilnie na Twoim sprzęcie.",
  },
  {
    question: "Czy dostanę materiały do samodzielnej pracy?",
    answer: "Tak. Po lekcji otrzymujesz podsumowanie i krótkie zadania do utrwalenia.",
  },
  {
    question: "Czy mogę zmienić tryb zajęć z grupowych na 1:1?",
    answer: "Tak, jeśli Twoje potrzeby się zmienią, dopasujemy formę współpracy.",
  },
  {
    question: "Jak szybko mogę zacząć?",
    answer:
      "Zazwyczaj wystarczy krótka konsultacja i dobór terminu. Umów się, a podamy dostępne okna.",
  },
];

const faqJsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((item) => ({
    "@type": "Question",
    name: item.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: item.answer,
    },
  })),
};

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Strona główna", url: "/" },
  { name: "Oferta", url: "/oferta" },
  { name: "Angielski online" },
]);
---

<MainLayout
  title={title}
  description={description}
  canonical="/angielski-online"
  structuredData={[faqJsonLd, breadcrumbSchema]}
>
  <section class="hero-bg">
    <div class="container-site py-16 sm:py-20">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="kicker">Angielski online</span>
          <h1 class="mt-6">Angielski online z lektorem, który stawia na mówienie</h1>
          <p class="mt-6 max-w-2xl text-lg">
            Pracujemy na żywo, z naciskiem na realne rozmowy. Dostajesz plan nauki, jasne cele i
            regularny feedback, dzięki czemu szybciej przechodzisz z rozumienia do swobodnego
            mówienia.
          </p>
          <div class="mt-8 flex flex-wrap gap-3">
            <a class="btn btn-primary" href={CTA_PRIMARY_HREF}>{CTA_PRIMARY_LABEL}</a>
            <a class="btn btn-secondary" href={CTA_SECONDARY_HREF}>{CTA_SECONDARY_LABEL}</a>
          </div>
          <div class="mt-4">
            <a class="text-sm font-bold text-primary no-underline hover:underline" href="/cennik">
              Sprawdź cennik →
            </a>
          </div>
          <p class="mt-4 text-sm text-slate-500">
            Mieszkasz w Legionowie? Sprawdź nasze
            <a
              class="font-bold text-primary no-underline hover:underline"
              href="/angielski-stacjonarnie">zajęcia stacjonarne</a
            >.
          </p>
        </div>

        <div class="grid gap-4">
          {
            benefits.map((item) => (
              <div class="card p-6">
                <h3 class="text-lg font-extrabold text-slate-900">{item.title}</h3>
                <p class="mt-2 text-sm text-slate-600">{item.text}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <h2>Co dostajesz w ramach lekcji online</h2>
      <p class="mt-4 max-w-3xl">
        Angielski online to nie tylko rozmowa na kamerze. To konkretna ścieżka rozwoju i narzędzia,
        które wspierają regularną praktykę.
      </p>
      <div class="mt-8 grid gap-6 md:grid-cols-2">
        <div class="card p-6">
          <h3 class="text-lg font-extrabold text-slate-900">Stały plan i rytm</h3>
          <p class="mt-3 text-sm">
            Ustalamy częstotliwość spotkań, zakres tematów i krótkie cele tygodniowe. Dzięki temu
            widzisz postęp.
          </p>
        </div>
        <div class="card p-6">
          <h3 class="text-lg font-extrabold text-slate-900">Materiały po lekcji</h3>
          <p class="mt-3 text-sm">
            Otrzymujesz podsumowanie, słownictwo i krótkie ćwiczenia, które utrwalają to, co
            przerobiliśmy.
          </p>
        </div>
      </div>
      <div class="mt-8">
        <a class="btn btn-secondary" href="/kontakt">Porozmawiaj o swoim celu</a>
      </div>
    </div>
  </section>

  <section class="section section-muted" id="lekcje">
    <div class="container-site">
      <h2>Lekcje angielskiego online dopasowane do Twojego celu</h2>
      <p class="mt-4 max-w-3xl">
        Chcesz więcej mówienia, lepszą wymowę albo uporządkowaną gramatykę? Dobieramy format i
        tempo, abyś szybko zobaczył efekty.
      </p>
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        {
          lessonFormats.map((format) => (
            <div class="card p-6">
              <h3 class="text-lg font-extrabold text-slate-900">{format.title}</h3>
              <p class="mt-2 text-sm text-slate-600">{format.text}</p>
            </div>
          ))
        }
      </div>
      <div class="mt-8 grid gap-6 lg:grid-cols-2 lg:items-start">
        <div>
          <h3 class="text-lg font-extrabold text-slate-900">Na czym skupiamy się podczas lekcji</h3>
          <ul class="mt-4 grid gap-3 text-sm text-slate-600 sm:grid-cols-2">
            {lessonDetails.map((item) => <li class="card p-4">{item}</li>)}
          </ul>
        </div>
        <div class="card p-6">
          <h3 class="text-lg font-extrabold text-slate-900">Najczęstsze obszary pracy</h3>
          <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-600">
            {lessonAreas.map((item) => <li>{item}</li>)}
          </ul>
        </div>
      </div>
      <div class="mt-8">
        <a class="btn btn-primary" href={CTA_PRIMARY_HREF}>{CTA_PRIMARY_LABEL}</a>
      </div>
    </div>
  </section>

  <section class="section" id="kurs">
    <div class="container-site">
      <h2>Kurs angielskiego online z jasnym planem i wsparciem</h2>
      <p class="mt-4 max-w-3xl">
        Jeśli chcesz uczyć się regularnie i z konkretnym planem, kurs online to najlepsza opcja.
        Dostajesz strukturę, materiały i wsparcie lektora na każdym etapie.
      </p>
      <div class="mt-8 grid gap-6 md:grid-cols-2">
        {
          courseModules.map((module) => (
            <div class="card p-6">
              <h3 class="text-lg font-extrabold text-slate-900">{module.title}</h3>
              <p class="mt-2 text-sm text-slate-600">{module.text}</p>
            </div>
          ))
        }
      </div>
      <div class="mt-8 grid gap-6 lg:grid-cols-2">
        <div class="card p-6">
          <h3 class="text-lg font-extrabold text-slate-900">Co daje kurs online</h3>
          <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-600">
            {courseOutcomes.map((item) => <li>{item}</li>)}
          </ul>
        </div>
        <div class="card p-6">
          <h3 class="text-lg font-extrabold text-slate-900">Przykładowe cele kursu</h3>
          <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-600">
            {courseGoals.map((item) => <li>{item}</li>)}
          </ul>
        </div>
      </div>
      <div class="mt-8">
        <a class="btn btn-secondary" href="/zapisy-2025-2026">Zapisz się na kurs</a>
      </div>
    </div>
  </section>

  {
    hasOnlineTestimonial && (
      <section class="section">
        <div class="container-site">
          <span class="kicker">Opinie</span>
          <h2 class="mt-4">Efekty lekcji online w praktyce</h2>
          <p class="mt-4 max-w-3xl text-sm text-slate-600">
            Zobacz, jak kursanci oceniają regularne lekcje online z naciskiem na mówienie.
          </p>
          <div class="mt-6 max-w-2xl">
            <TestimonialCard testimonial={onlineTestimonial} />
          </div>
        </div>
      </section>
    )
  }

  <TrustSection />

  <FaqSection title="Angielski online — najczęstsze pytania" items={faqs} />

  <CTASection
    title="Chcesz zacząć angielski online?"
    description="Napisz, jaki masz poziom i cel. Zaproponujemy formę zajęć, terminy i plan nauki."
    note="Odpowiadamy szybko — zwykle w ciągu 1–2 dni roboczych."
    variant="english"
  />
</MainLayout>
