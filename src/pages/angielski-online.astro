---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import FaqSection from "../components/FaqSection.astro";
import { BRAND_NAME } from "../config/site";

const title = `Angielski online – lekcje z lektorem | ${BRAND_NAME}`;
const description =
  "Skuteczny angielski online. Zajęcia 1:1 i grupowe, nacisk na mówienie. Umów lekcję próbną.";

const benefits = [
  {
    title: "Lekcje na żywo",
    text: "Uczysz się z lektorem w czasie rzeczywistym — zero nagrań i przypadkowych ćwiczeń.",
  },
  {
    title: "Mówienie od pierwszych minut",
    text: "Każde spotkanie zaczyna się od krótkiej rozmowy i pracy na realnych sytuacjach.",
  },
  {
    title: "Materiał dopasowany do celu",
    text: "Praca, podróże, rozmowy biznesowe czy egzamin — plan dostosowujemy do Twoich potrzeb.",
  },
];

const format = [
  "Lekcje 1:1 dla maksymalnej personalizacji.",
  "Mini-grupy 2–4 osoby dla większej dynamiki.",
  "Materiały po zajęciach: podsumowanie i słownictwo.",
  "Stały kontakt i korekty planu, gdy zmienia się cel.",
];

const faqs = [
  {
    question: "Jak wygląda pierwsza lekcja online?",
    answer:
      "To krótka diagnoza poziomu i rozmowa o celu. Wspólnie ustalamy plan kolejnych spotkań.",
  },
  {
    question: "Czy muszę mieć dobre łącze internetowe?",
    answer:
      "Wystarczy stabilne Wi‑Fi i słuchawki z mikrofonem. Resztę konfigurujemy na start.",
  },
  {
    question: "Czy angielski online sprawdzi się przy niskim poziomie?",
    answer:
      "Tak. Zaczynamy od prostych dialogów i utrwalamy słownictwo w praktyce.",
  },
  {
    question: "Jakie platformy wykorzystujecie?",
    answer:
      "Dobieramy narzędzie, które jest dla Ciebie wygodne i działa stabilnie na Twoim sprzęcie.",
  },
  {
    question: "Czy dostanę materiały do samodzielnej pracy?",
    answer:
      "Tak. Po lekcji otrzymujesz podsumowanie i krótkie zadania do utrwalenia.",
  },
  {
    question: "Czy mogę zmienić tryb zajęć z grupowych na 1:1?",
    answer:
      "Tak, jeśli Twoje potrzeby się zmienią, dopasujemy formę współpracy.",
  },
  {
    question: "Jak szybko mogę zacząć?",
    answer:
      "Zazwyczaj wystarczy krótka konsultacja i dobór terminu. Skontaktuj się, a podamy dostępne okna.",
  },
];
---

<MainLayout title={title} description={description}>
  <section class="hero-bg">
    <div class="container-site py-16 sm:py-20">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="kicker">Angielski online</span>
          <h1 class="mt-6">Angielski online z lektorem, który stawia na mówienie</h1>
          <p class="mt-6 max-w-2xl text-lg">
            Pracujemy na żywo, z naciskiem na realne rozmowy. Dostajesz plan nauki, jasne cele i regularny feedback,
            dzięki czemu szybciej przechodzisz z rozumienia do swobodnego mówienia.
          </p>
          <div class="mt-8 flex flex-wrap gap-3">
            <a class="btn btn-primary" href="/kontakt">Lekcja próbna</a>
            <a class="btn btn-secondary" href="/cennik">Sprawdź cennik</a>
          </div>
          <p class="mt-4 text-sm text-slate-500">
            Szukasz innego formatu? Zobacz też
            <a class="font-bold text-primary no-underline hover:underline" href="/lekcje-angielskiego-online">lekcje online</a>
            oraz
            <a class="font-bold text-primary no-underline hover:underline" href="/kurs-angielskiego-online">kurs online</a>.
          </p>
        </div>

        <div class="grid gap-4">
          {benefits.map((item) => (
            <div class="card p-6">
              <h3 class="text-lg font-extrabold text-slate-900">{item.title}</h3>
              <p class="mt-2 text-sm text-slate-600">{item.text}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <h2>Co dostajesz w ramach lekcji online</h2>
      <p class="mt-4 max-w-3xl">
        Angielski online to nie tylko rozmowa na kamerze. To konkretna ścieżka rozwoju i narzędzia, które wspierają
        regularną praktykę.
      </p>
      <div class="mt-8 grid gap-6 md:grid-cols-2">
        <div class="card p-6">
          <h3 class="text-lg font-extrabold text-slate-900">Stały plan i rytm</h3>
          <p class="mt-3 text-sm">
            Ustalamy częstotliwość spotkań, zakres tematów i krótkie cele tygodniowe. Dzięki temu widzisz postęp.
          </p>
        </div>
        <div class="card p-6">
          <h3 class="text-lg font-extrabold text-slate-900">Materiały po lekcji</h3>
          <p class="mt-3 text-sm">
            Otrzymujesz podsumowanie, słownictwo i krótkie ćwiczenia, które utrwalają to, co przerobiliśmy.
          </p>
        </div>
      </div>
      <div class="mt-8">
        <a class="btn btn-secondary" href="/kontakt">Porozmawiaj o swoim celu</a>
      </div>
    </div>
  </section>

  <section class="section section-muted">
    <div class="container-site">
      <h2>Formy zajęć i tempo pracy</h2>
      <p class="mt-4 max-w-3xl">
        Uczysz się tak, jak lubisz: indywidualnie albo w mini-grupie. Tempo dopasowujemy do Twojej dostępności.
      </p>
      <ul class="mt-6 grid gap-3 text-sm text-slate-600 sm:grid-cols-2">
        {format.map((item) => (
          <li class="card p-4">{item}</li>
        ))}
      </ul>
      <div class="mt-8">
        <a class="btn btn-primary" href="/kontakt">Zarezerwuj lekcję próbną</a>
      </div>
    </div>
  </section>

  <FaqSection title="Angielski online — najczęstsze pytania" items={faqs} />

  <CTASection
    title="Chcesz zacząć angielski online?"
    description="Napisz, jaki masz poziom i cel. Zaproponujemy formę zajęć, terminy i plan nauki."
    note="Odpowiadamy szybko — zwykle w ciągu 24h w dni robocze."
  />
</MainLayout>
