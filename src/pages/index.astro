---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import TeacherCard from "../components/TeacherCard.astro";
import { teachers } from "../data/teachers";
import { taughtLanguages } from "../data/subjects";
import testimonials from "../data/testimonials.json";
import { BRAND_NAME, CTA_PRIMARY_HREF } from "../config/site";

const languagesList = new Intl.ListFormat("pl", {
  style: "long",
  type: "conjunction",
}).format(taughtLanguages);

const title = `Szkoła języków obcych i matematyki w Legionowie — stacjonarnie i online | ${BRAND_NAME}`;
const description =
  `Lingua Legionowo — szkoła języków obcych i matematyki. Uczymy ${languagesList} i prowadzimy zajęcia ` +
  "z matematyki stacjonarnie w Legionowie oraz online.";

const previewTeachers = teachers.slice(0, 4);

const offerCards = [
  {
    title: "Angielski stacjonarnie",
    text: "Zajęcia twarzą w twarz w Legionowie. Bezpośredni kontakt i pełna koncentracja.",
    href: "/angielski-stacjonarnie",
    featured: true,
  },
  {
    title: "Angielski online",
    text: "Lekcje zdalne z lektorem na żywo. Elastyczne godziny i nacisk na mówienie.",
    href: "/angielski-online",
    featured: false,
  },
];

const steps = [
  {
    title: "Rozmowa i diagnoza",
    text: "Poznajemy Twój cel, poziom i preferowany tryb zajęć. Ustalamy priorytety.",
  },
  {
    title: "Plan nauki i materiały",
    text: "Dostajesz plan na 4–12 tygodni z konkretnymi tematami, słownictwem i ćwiczeniami.",
  },
  {
    title: "Lekcje + feedback",
    text: "Na zajęciach mówisz od pierwszych minut. Po lekcji dostajesz wskazówki i zadania.",
  },
];

const highlights = [
  "Zajęcia stacjonarne w Legionowie",
  "Lekcje online dopasowane do grafiku",
  "Poziomy od A1 do C1",
];

const subjectChips = ["Angielski", "Inne języki", "Matematyka"];

const reviewCount = testimonials.length;
const reviewAverage = reviewCount
  ? (testimonials.reduce((sum, item) => sum + item.rating, 0) / reviewCount).toFixed(1)
  : "—";

const proofPoints = [
  {
    label: "Ocena kursantów",
    value: `${reviewAverage}/5`,
    note: `Na podstawie ${reviewCount} opinii na stronie`,
  },
  {
    label: "Diagnoza + plan",
    value: "Start z celem",
    note: "Ustalamy poziom, priorytety i kolejne kroki",
  },
  {
    label: "Materiały po lekcji",
    value: "Podsumowania",
    note: "Słownictwo i krótkie zadania do utrwalenia",
  },
];
---

<MainLayout title={title} description={description} canonical="/">
  <section class="hero-bg relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
      <div class="absolute -right-20 -top-20 h-72 w-72 rounded-full bg-primary/5 blur-3xl"></div>
      <div class="absolute -left-20 top-1/2 h-96 w-96 rounded-full bg-primary/5 blur-3xl"></div>
    </div>

    <div class="container-site relative py-16 sm:py-24 lg:py-28">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center lg:gap-16">
        <div>
          <span class="kicker">Szkoła języków obcych i matematyki</span>
          <h1 class="mt-6">
            Szkoła języków obcych i matematyki w Legionowie — stacjonarnie i online
          </h1>
          <p class="mt-6 max-w-2xl text-lg text-slate-600">
            Uczymy języków obcych — {languagesList} — oraz matematyki. Prowadzimy zajęcia stacjonarne
            w Legionowie i lekcje online dla osób spoza Legionowa, zawsze z naciskiem na praktykę i regularny
            feedback.
          </p>

          <div class="mt-8 flex flex-wrap gap-4">
            <a class="btn btn-primary" href={CTA_PRIMARY_HREF}>Skontaktuj się</a>
            <a class="btn btn-secondary" href="/oferta">Zobacz ofertę</a>
          </div>

          <div class="mt-10 grid gap-4 text-sm text-slate-600 sm:grid-cols-2">
            {
              highlights.map((item) => (
                <div class="flex items-center gap-3">
                  <span class="flex h-6 w-6 items-center justify-center rounded-full bg-primary/10" aria-hidden="true">
                    <svg class="h-3.5 w-3.5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </span>
                  <span class="font-medium">{item}</span>
                </div>
              ))
            }
          </div>
        </div>

        <div class="relative">
          <!-- Decorative frame behind image -->
          <div class="absolute -inset-4 rounded-[2rem] bg-gradient-to-br from-primary/10 via-primary/5 to-transparent" aria-hidden="true"></div>
          <img
            src="/images/hero.svg"
            alt="Szkoła języków obcych i matematyki Lingua Legionowo"
            loading="eager"
            width="600"
            height="400"
            decoding="async"
            fetchpriority="high"
            class="relative w-full rounded-3xl border border-slate-200 bg-white shadow-lg"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="section section-muted">
    <div class="container-site">
      <span class="kicker">Czego uczymy</span>
      <h2 class="mt-6">Języki obce i matematyka w jednym miejscu</h2>
      <p class="mt-4 max-w-3xl">
        Uczymy w małych grupach i indywidualnie, stacjonarnie w Legionowie lub online. Najczęściej
        wybierane ścieżki znajdziesz poniżej, a pełną ofertę w osobnej zakładce.
      </p>

      <div class="mt-6 flex flex-wrap gap-2">
        {subjectChips.map((subject) => <span class="chip text-sm">{subject}</span>)}
      </div>
      <div class="mt-6">
        <a class="text-sm font-bold text-primary no-underline hover:underline" href="/oferta">
          Zobacz pełną ofertę →
        </a>
      </div>
    </div>
  </section>

  <section class="py-12 lg:py-16">
    <div class="container-site">
      <div class="grid gap-6 md:grid-cols-3">
        {
          proofPoints.map((item) => (
            <div class="stat-card text-center">
              <div class="text-xs font-bold uppercase tracking-widest text-primary">
                {item.label}
              </div>
              <div class="mt-3 text-3xl font-extrabold text-slate-900">{item.value}</div>
              <div class="mt-2 text-sm text-slate-500">{item.note}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <div class="flex flex-col gap-6 lg:flex-row lg:items-end lg:justify-between">
        <div>
          <span class="kicker">Nasi lektorzy</span>
          <h2 class="mt-6">Poznaj zespół, który prowadzi zajęcia</h2>
          <p class="mt-4 max-w-3xl">
            Doświadczeni lektorzy języków obcych i matematyki prowadzą zajęcia dopasowane do Twojego
            poziomu i celu. Poznaj kilka osób z naszego zespołu.
          </p>
        </div>
        <div class="mt-6 lg:mt-0">
          <a class="btn btn-secondary" href="/nasi-lektorzy">Zobacz wszystkich</a>
        </div>
      </div>

      <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {
          previewTeachers.map((teacher, index) => (
            <TeacherCard teacher={teacher} loading={index === 0 ? "eager" : "lazy"} />
          ))
        }
      </div>
    </div>
  </section>

  <section class="section section-muted">
    <div class="container-site">
      <div class="text-center">
        <span class="kicker">Proces</span>
        <h2 class="mt-4">Jak pracujemy</h2>
        <p class="mx-auto mt-4 max-w-2xl">
          Niezależnie od wybranego trybu, otrzymujesz jasny plan nauki i wsparcie na każdym etapie.
        </p>
      </div>

      <div class="mt-12 grid gap-8 lg:grid-cols-3">
        {
          steps.map((step, index) => (
            <div class="card p-6 text-center">
              <div class="mx-auto mb-5 flex h-12 w-12 items-center justify-center rounded-full bg-primary text-lg font-bold text-white shadow-md">
                {index + 1}
              </div>
              <h3 class="text-lg font-extrabold text-slate-900">{step.title}</h3>
              <p class="mt-3 text-sm text-slate-600">{step.text}</p>
            </div>
          ))
        }
      </div>

      <div class="mt-12 text-center">
        <a class="btn btn-primary" href="/kontakt">Porozmawiaj o planie nauki</a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <div class="flex flex-col gap-6 lg:flex-row lg:items-end lg:justify-between">
        <div>
          <span class="kicker">Oferta</span>
          <h2 class="mt-4">Wybierz formę nauki dopasowaną do Ciebie</h2>
          <p class="mt-4 max-w-2xl text-slate-600">
            Dwie główne ścieżki to zajęcia stacjonarne w Legionowie i lekcje online. Pozostałe języki i
            matematyka są opisane w ofercie.
          </p>
        </div>
        <div class="shrink-0">
          <a class="btn btn-secondary" href="/oferta">Zobacz pełną ofertę</a>
        </div>
      </div>

      <div class="mt-10 grid gap-6 md:grid-cols-2">
        {
          offerCards.map((card) => (
            <a
              class={`card-interactive no-underline group ${card.featured ? "ring-2 ring-primary/50" : ""}`}
              href={card.href}
            >
              {card.featured && <span class="badge mb-4 bg-primary text-white">Polecane</span>}
              <h3 class="text-xl font-extrabold text-slate-900">{card.title}</h3>
              <p class="mt-3 text-slate-600">{card.text}</p>
              <span class="mt-4 inline-flex items-center gap-2 text-sm font-bold text-primary group-hover:gap-3 transition-all">
                Poznaj szczegóły
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <CTASection
    title="Gotowy na naukę języków obcych lub matematyki w Legionowie?"
    description="Napisz do nas — zaproponujemy terminy konsultacji i plan nauki dopasowany do Twojego celu (stacjonarnie lub online)."
    note="Odpowiadamy szybko — zwykle w ciągu 1–2 dni roboczych."
    secondaryLabel={null}
  />
</MainLayout>
