---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import { BRAND_NAME } from "../config/site";

const title = `Angielski online z lektorem – lekcja próbna | ${BRAND_NAME}`;
const description =
  "Angielski online z lektorem: 1:1 i mini-grupy, nacisk na mówienie, elastyczny grafik. Umów lekcję próbną i zacznij mówić po angielsku.";

const offerCards = [
  {
    title: "Angielski online",
    text: "Zajęcia na żywo z lektorem, skupione na mówieniu i realnych sytuacjach.",
    href: "/angielski-online",
  },
  {
    title: "Angielski zdalnie",
    text: "Nauka z domu lub z podróży, bez dojazdów i z elastycznym grafikiem.",
    href: "/angielski-zdalnie",
  },
  {
    title: "Lekcje online",
    text: "Lekcje 1:1 lub w mini-grupie, dopasowane do poziomu i celu.",
    href: "/lekcje-angielskiego-online",
  },
  {
    title: "Kurs online",
    text: "Program krok po kroku: diagnoza, plan, materiały i regularny feedback.",
    href: "/kurs-angielskiego-online",
  },
];

const steps = [
  {
    title: "Rozmowa i diagnoza",
    text: "Poznajemy Twój cel, poziom i preferowany rytm zajęć. Ustalamy priorytety.",
  },
  {
    title: "Plan nauki i materiały",
    text: "Dostajesz plan na 4–12 tygodni z konkretnymi tematami, słownictwem i ćwiczeniami.",
  },
  {
    title: "Lekcje + feedback",
    text: "Na zajęciach mówisz od pierwszych minut. Po lekcji dostajesz wskazówki i zadania.",
  },
];

const highlights = [
  "Lekcje na żywo, bez nagrań",
  "Poziomy od A1 do C1",
  "Konwersacje + gramatyka w praktyce",
  "Regularny feedback i cele tygodniowe",
];
---

<MainLayout title={title} description={description}>
  <section class="hero-bg">
    <div class="container-site py-16 sm:py-20">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="kicker">Angielski online</span>
          <h1 class="mt-6">Mów po angielsku pewnie – ucz się z lektorem online</h1>
          <p class="mt-6 max-w-2xl text-lg">
            Lekcje 1:1 i mini-grupy, elastyczne godziny i realne sytuacje językowe. Skupiamy się na mówieniu,
            a nie na wypełnianiu ćwiczeń bez końca.
          </p>

          <div class="mt-8 flex flex-wrap gap-3">
            <a class="btn btn-primary" href="/kontakt">Lekcja próbna</a>
            <a class="btn btn-secondary" href="/kontakt">Zapisz się</a>
          </div>

          <div class="mt-8 grid gap-3 text-sm text-slate-600 sm:grid-cols-2">
            {highlights.map((item) => (
              <div class="flex items-center gap-2">
                <span class="h-2.5 w-2.5 rounded-full bg-primary" aria-hidden="true"></span>
                <span>{item}</span>
              </div>
            ))}
          </div>
        </div>

        <div class="relative">
          <img
            src="/images/hero.svg"
            alt="Lekcja angielskiego online"
            loading="eager"
            class="w-full rounded-3xl border border-slate-200 shadow-soft"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <h2>Jak wygląda nauka online?</h2>
      <p class="mt-4 max-w-3xl">
        Uczysz się w rytmie dopasowanym do pracy i życia. Zamiast przypadkowych tematów masz jasny plan
        i zajęcia skoncentrowane na Twoim celu.
      </p>

      <div class="mt-8 grid gap-6 lg:grid-cols-3">
        {steps.map((step) => (
          <div class="card p-6">
            <h3 class="text-lg font-extrabold text-slate-900">{step.title}</h3>
            <p class="mt-3 text-sm">{step.text}</p>
          </div>
        ))}
      </div>

      <div class="mt-8">
        <a class="btn btn-secondary" href="/kontakt">Porozmawiaj o planie nauki</a>
      </div>
    </div>
  </section>

  <section class="section section-muted">
    <div class="container-site">
      <h2>Wybierz ścieżkę dopasowaną do Ciebie</h2>
      <p class="mt-4 max-w-3xl">
        Każda strona oferty odpowiada innemu celowi: szybkie konwersacje, regularny kurs lub lekcje 1:1.
      </p>

      <div class="mt-8 grid gap-6 md:grid-cols-2">
        {offerCards.map((card) => (
          <a class="card p-6 no-underline transition hover:-translate-y-0.5" href={card.href}>
            <h3 class="text-lg font-extrabold text-slate-900">{card.title}</h3>
            <p class="mt-3 text-sm text-slate-600">{card.text}</p>
            <span class="mt-4 inline-flex text-sm font-bold text-primary">Poznaj szczegóły →</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-start">
        <div class="card p-6">
          <h2 class="text-2xl font-extrabold tracking-tight">Najczęściej wybierane formaty</h2>
          <p class="mt-4 text-sm">
            Zamiast jednego sztywnego programu dobierasz format do celu i czasu. W razie potrzeby
            możesz zmienić tryb w trakcie współpracy.
          </p>
          <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-600">
            <li>1:1 — szybki postęp i pełna personalizacja.</li>
            <li>Mini-grupa 2–4 osoby — więcej mówienia, niższa cena.</li>
            <li>Intensywny kurs 8–12 tygodni — widoczne efekty w krótszym czasie.</li>
          </ul>
          <div class="mt-6">
            <a class="btn btn-secondary" href="/cennik">Zobacz cennik</a>
          </div>
        </div>

        <div class="card p-6">
          <h2 class="text-2xl font-extrabold tracking-tight">Co warto umówić na start</h2>
          <p class="mt-4 text-sm">
            Pierwsza lekcja to szybka diagnoza i plan na kolejne spotkania. Od razu dostajesz konkretne
            wskazówki, nad czym pracować.
          </p>
          <div class="mt-6">
            <a class="btn btn-primary" href="/kontakt">Umów lekcję próbną</a>
          </div>
          <p class="mt-4 text-xs text-slate-500">
            Chcesz dowiedzieć się więcej o kursie? Sprawdź także
            <a class="font-bold text-primary no-underline hover:underline" href="/kurs-angielskiego-online">
              kurs angielskiego online
            </a>.
          </p>
        </div>
      </div>
    </div>
  </section>

  <CTASection
    title="Gotowy na angielski online dopasowany do Ciebie?"
    description="Napisz kilka słów o swoim celu, a zaproponujemy plan nauki, formę zajęć i możliwe terminy."
    note="Odpowiadamy szybko w dni robocze."
  />
</MainLayout>
