---
import MainLayout from "../layouts/MainLayout.astro";
import { BRAND_NAME } from "../config/site";

const title = `404 – nie znaleziono strony | ${BRAND_NAME}`;
const description = "Strona nie istnieje lub została przeniesiona. Wróć na stronę główną.";
---

<MainLayout title={title} description={description}>
  <section class="section">
    <div class="container-site">
      <span class="kicker">404</span>
      <h1 class="mt-6">Nie znaleziono strony</h1>
      <p class="mt-4 max-w-2xl text-lg">
        Wygląda na to, że ten adres nie istnieje lub został przeniesiony.
      </p>
      <div class="mt-8 flex flex-wrap gap-3">
        <a class="btn btn-primary" href="/">Wróć na stronę główną</a>
        <a class="btn btn-secondary" href="/kontakt">Skontaktuj się</a>
        <a class="btn btn-ghost" href="/cennik">Cennik</a>
      </div>
    </div>
  </section>
</MainLayout>
