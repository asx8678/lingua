---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import { BRAND_NAME } from "../config/site";

const title = `Cennik – kursy angielskiego w Legionowie | ${BRAND_NAME}`;
const description =
  "Sprawdź ceny kursów angielskiego w Legionowie. Lekcje stacjonarne i online, 1:1 i grupowe. Umów lekcję próbną.";

const pricing = [
  {
    title: "Lekcje 1:1",
    price: "[TODO] zł",
    note: "Cena za spotkanie lub pakiet — dopasowujemy długość i rytm nauki.",
    features: [
      "Pełna personalizacja planu",
      "Stały feedback po każdej lekcji",
      "Elastyczne terminy",
    ],
  },
  {
    title: "Mini-grupa 2–4 osoby",
    price: "[TODO] zł",
    note: "Niższy koszt na osobę i więcej rozmów niż w dużej grupie.",
    features: [
      "Więcej interakcji i motywacji",
      "Wspólny cel i poziom",
      "Materiały po zajęciach",
    ],
  },
  {
    title: "Kurs online (program)",
    price: "[TODO] zł",
    note: "Kurs z jasnym planem i materiałami — idealny dla osób, które chcą struktury.",
    features: [
      "Plan na 4–12 tygodni",
      "Konwersacje + gramatyka",
      "Regularne podsumowania",
    ],
  },
];

const steps = [
  "Podaj poziom i cel nauki",
  "Wybierz preferowany format (1:1 / mini-grupa)",
  "Dostaniesz propozycję planu i cenę",
];
---

<MainLayout title={title} description={description}>
  <section class="hero-bg">
    <div class="container-site py-16 sm:py-20">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="kicker">Cennik</span>
          <h1 class="mt-6">Cennik kursów angielskiego w Legionowie</h1>
          <p class="mt-6 max-w-2xl text-lg">
            Cena zależy od formatu zajęć (stacjonarnie/online), długości spotkań i częstotliwości.
            Poniżej znajdziesz orientacyjne warianty, a szczegóły ustalamy po krótkiej rozmowie.
          </p>
          <div class="mt-8 flex flex-wrap gap-3">
            <a class="btn btn-primary" href="/kontakt">Poproś o wycenę</a>
            <a class="btn btn-secondary" href="/angielski-stacjonarnie">Zajęcia stacjonarne</a>
          </div>
        </div>

        <div class="card p-6">
          <h2 class="text-2xl font-extrabold tracking-tight">Jak uzyskać dokładną wycenę</h2>
          <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-600">
            {steps.map((step) => (
              <li>{step}</li>
            ))}
          </ul>
          <div class="mt-6">
            <a class="btn btn-secondary" href="/kontakt">Umów konsultację</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <h2>Najczęściej wybierane pakiety</h2>
      <p class="mt-4 max-w-3xl">
        Wybierz format zajęć i tempo nauki. Możemy dopasować liczbę spotkań i długość lekcji do Twojego kalendarza.
      </p>

      <div class="mt-8 grid gap-6 lg:grid-cols-3">
        {pricing.map((item) => (
          <div class="card p-6">
            <div class="text-xs font-bold uppercase tracking-widest text-slate-500">{item.title}</div>
            <div class="mt-3 text-3xl font-extrabold text-slate-900">{item.price}</div>
            <p class="mt-3 text-sm text-slate-600">{item.note}</p>
            <ul class="mt-4 space-y-2 text-sm text-slate-600">
              {item.features.map((feature) => (
                <li class="flex items-center gap-2">
                  <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true"></span>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            <div class="mt-6">
              <a class="btn btn-secondary w-full" href="/kontakt">Zapytaj o szczegóły</a>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-8">
        <a class="btn btn-ghost" href="/lekcje-angielskiego-online">Zobacz, jak wyglądają lekcje online</a>
      </div>
    </div>
  </section>

  <CTASection
    title="Chcesz dokładny plan i cenę dla siebie?"
    description="Napisz, jaki masz poziom, cel i preferowane godziny — przygotujemy propozycję pakietu."
  />
</MainLayout>
