---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import PriceCalculator from "../components/PriceCalculator.astro";
import { BRAND_NAME, generateBreadcrumbSchema } from "../config/site";

const title = `Cennik – kursy angielskiego w Legionowie | ${BRAND_NAME}`;
const description =
  "Sprawdź ceny kursów angielskiego i matematyki w Legionowie. Lekcje stacjonarne i online, 1:1 i grupowe.";

const hourlyRates = [
  {
    title: "Lekcje 1:1",
    price: "130 zł / 60 min",
    note: "Pakiet 10 spotkań: 1300 zł / osoba.",
    features: ["Pełna personalizacja planu", "Stały feedback po każdej lekcji"],
  },
  {
    title: "Duet (2 osoby)",
    price: "80 zł / 60 min",
    note: "Pakiet 10 spotkań: 800 zł / osoba.",
    features: ["Więcej rozmów i motywacji", "Wspólny poziom i cel"],
  },
  {
    title: "Trójka (3 osoby)",
    price: "65 zł / 60 min",
    note: "Pakiet 10 spotkań: 650 zł / osoba.",
    features: ["Przystępna cena / osoba", "Dobra dynamika grupy"],
  },
];

const steps = [
  "Podaj poziom i cel nauki",
  "Wybierz preferowany format (1:1 / mini-grupa)",
  "Dostaniesz propozycję planu i cenę",
];

const faq = [
  {
    question: "Jak liczymy cenę pakietów 10 spotkań?",
    answer:
      "Stawki bazują na pakietach 10 spotkań. Kalkulator przelicza koszt proporcjonalnie, jeśli wybierzesz inną liczbę spotkań.",
  },
  {
    question: "Jak rozliczane są kursy grupowe?",
    answer:
      "Kursy mają stałą liczbę spotkań i cenę za osobę zgodnie z cennikiem (30×90 lub 56×60/90 min). Minimalna liczba osób wynika z cennika.",
  },
  {
    question: "Czy matematyka kosztuje tyle samo co angielski?",
    answer: "Tak, matematyka jest wyceniana według tych samych stawek co angielski.",
  },
];

const faqJsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faq.map((item) => ({
    "@type": "Question",
    name: item.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: item.answer,
    },
  })),
};

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Strona główna", url: "/" },
  { name: "Cennik" },
]);
---

<MainLayout
  title={title}
  description={description}
  canonical="/cennik"
  structuredData={[faqJsonLd, breadcrumbSchema]}
>
  <section class="hero-bg">
    <div class="container-site py-16 sm:py-20">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="kicker">Cennik</span>
          <h1 class="mt-6">Cennik kursów angielskiego w Legionowie</h1>
          <p class="mt-6 max-w-2xl text-lg">
            Cena zależy od formatu zajęć (stacjonarnie/online), długości spotkań i częstotliwości.
            Poniżej znajdziesz orientacyjne warianty, a szczegóły ustalamy po krótkiej rozmowie.
          </p>
          <p class="mt-4 text-xs font-semibold uppercase tracking-widest text-slate-500">
            Cennik aktualny na rok 2025/2026
          </p>
          <p class="mt-4 text-sm text-slate-600">Matematyka ma takie same stawki jak angielski.</p>
          <p class="mt-2 text-sm text-slate-600">
            Pozostałe języki: wycena indywidualna — zależna od lektora i formy zajęć.
          </p>
          <div class="mt-8 flex flex-wrap gap-3">
            <a class="btn btn-primary" href="/kontakt">Umów konsultację</a>
            <a class="btn btn-secondary" href="/cennik-lingua.pdf" download>
              <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path
                  fill-rule="evenodd"
                  d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
              Pobierz cennik (PDF)
            </a>
          </div>
        </div>

        <div class="card p-6">
          <h2 class="text-2xl font-extrabold tracking-tight">Jak uzyskać dokładną wycenę</h2>
          <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-600">
            {steps.map((step) => <li>{step}</li>)}
          </ul>
          <div class="mt-6">
            <a class="btn btn-secondary" href="/kontakt">Umów konsultację</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <h2>Ceny za 60 min (angielski i matematyka)</h2>
      <p class="mt-4 max-w-3xl">
        Poniższe stawki dotyczą pakietów 10 spotkań. Dla kursów grupowych i innych długości lekcji
        skorzystaj z kalkulatora lub pełnego cennika PDF.
      </p>

      <div class="mt-8 grid gap-6 lg:grid-cols-3">
        {
          hourlyRates.map((item) => (
            <div class="card p-6">
              <div class="text-xs font-bold uppercase tracking-widest text-slate-500">
                {item.title}
              </div>
              <div class="mt-3 text-3xl font-extrabold text-slate-900">{item.price}</div>
              <p class="mt-3 text-sm text-slate-600">{item.note}</p>
              <ul class="mt-4 space-y-2 text-sm text-slate-600">
                {item.features.map((feature) => (
                  <li class="flex items-center gap-2">
                    <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true" />
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
              <div class="mt-6">
                <a class="btn btn-secondary w-full" href="/kontakt">
                  Zapytaj o szczegóły
                </a>
              </div>
            </div>
          ))
        }
      </div>

      <div class="mt-8">
        <a class="btn btn-ghost" href="/cennik-lingua.pdf" download>
          <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path
              fill-rule="evenodd"
              d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
          Pobierz pełny cennik (PDF)
        </a>
      </div>
    </div>
  </section>

  <section class="section section-muted">
    <div class="container-site">
      <h2>Kalkulator ceny</h2>
      <p class="mt-4 max-w-3xl">
        Wybierz pakiet lub kurs, a kalkulator pokaże koszt na osobę i orientacyjną cenę całej grupy.
      </p>
      <div class="mt-8">
        <PriceCalculator />
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container-site">
      <h2>Jak działa wycena</h2>
      <div class="mt-6 grid gap-6 md:grid-cols-3">
        {
          faq.map((item) => (
            <div class="card p-6">
              <div class="text-sm font-extrabold text-slate-900">{item.question}</div>
              <p class="mt-3 text-sm text-slate-600">{item.answer}</p>
            </div>
          ))
        }
      </div>
      <p class="mt-6 text-xs text-slate-500">
        Cennik oparty o PDF na sezon 2025/2026. Jeśli potrzebujesz indywidualnej wyceny, skontaktuj
        się z nami.
      </p>
    </div>
  </section>

  <CTASection
    title="Chcesz dokładny plan i cenę dla siebie?"
    description="Napisz, jaki masz poziom, cel i preferowane godziny — przygotujemy propozycję pakietu."
  />
</MainLayout>
