---
import MainLayout from "../layouts/MainLayout.astro";
import CTASection from "../components/CTASection.astro";
import PriceCalculator from "../components/PriceCalculator.astro";
import { BRAND_NAME } from "../config/site";

const title = `Cennik zajęć 2025/2026 – kursy angielskiego w Legionowie | ${BRAND_NAME}`;
const description =
  "Sprawdź ceny kursów angielskiego w Legionowie. Lekcje stacjonarne i online, 1:1 i grupowe. Interaktywny kalkulator cen. Umów lekcję próbną.";

// Kursy grupowe
const coursePricing = {
  title: "Kursy grupowe",
  columns: ["Cena kursu", "Ilość spotkań", "Czas spotkania", "Ilość uczniów"],
  rows: [
    ["2 800 zł", "56", "60 min", "od 4 osób"],
    ["2 700 zł", "30", "90 min", "od 3 osób"],
    ["4 200 zł", "56", "90 min", "od 4 osób"],
  ],
};

// Zajęcia indywidualne 60 min
const individual60Pricing = {
  title: "Zajęcia indywidualne — 60 min",
  subtitle: "Pakiet 10 spotkań",
  columns: ["Cena pakietu", "Ilość spotkań", "Czas spotkania", "Ilość uczniów"],
  rows: [
    ["1 300 zł", "10", "60 min", "1"],
    ["800 zł", "10", "60 min", "2"],
    ["650 zł", "10", "60 min", "3"],
  ],
};

// Zajęcia indywidualne 45 min
const individual45Pricing = {
  title: "Zajęcia indywidualne — 45 min",
  subtitle: "Pakiet 10 spotkań",
  columns: ["Cena pakietu", "Ilość spotkań", "Czas spotkania", "Ilość uczniów"],
  rows: [
    ["1 000 zł", "10", "45 min", "1"],
    ["600 zł", "10", "45 min", "2"],
    ["500 zł", "10", "45 min", "3"],
  ],
};
---

<MainLayout title={title} description={description}>
  <section class="hero-bg">
    <div class="container-site py-16 sm:py-20">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-start">
        <div>
          <span class="kicker">Cennik 2025/2026</span>
          <h1 class="mt-6">Cennik zajęć angielskiego w Legionowie</h1>
          <p class="mt-6 max-w-2xl text-lg">
            Poniżej znajdziesz pełny cennik zajęć indywidualnych i kursów grupowych.
            Skorzystaj z interaktywnego kalkulatora, aby łatwo porównać ceny i wybrać najlepszą opcję.
          </p>
          <div class="mt-8 flex flex-wrap gap-3">
            <a class="btn btn-primary" href="/kontakt">Umów lekcję próbną</a>
            <a class="btn btn-secondary" href="/angielski-stacjonarnie">Zajęcia stacjonarne</a>
          </div>
        </div>

        <div>
          <h2 class="text-xl font-bold text-slate-900 mb-4">Kalkulator cen</h2>
          <PriceCalculator />
        </div>
      </div>
    </div>
  </section>

  <!-- Cennik tabelaryczny -->
  <section class="section">
    <div class="container-site">
      <h2>Pełny cennik zajęć 2025/2026</h2>
      <p class="mt-4 max-w-3xl text-slate-600">
        Ceny zależą od liczby osób w grupie, długości spotkań i typu zajęć.
        Poniżej znajdziesz szczegółowy cennik — skorzystaj z kalkulatora powyżej, aby policzyć koszt dla swojej sytuacji.
      </p>

      <!-- Kursy grupowe -->
      <div class="mt-10">
        <h3 class="text-lg font-bold text-slate-900">{coursePricing.title}</h3>
        <div class="mt-4 overflow-x-auto">
          <table class="w-full text-left text-sm">
            <thead>
              <tr class="bg-primary text-white">
                {coursePricing.columns.map((col) => (
                  <th class="px-4 py-3 font-bold">{col}</th>
                ))}
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200">
              {coursePricing.rows.map((row) => (
                <tr class="hover:bg-slate-50">
                  {row.map((cell, i) => (
                    <td class={`px-4 py-3 ${i === 0 ? 'font-semibold' : ''}`}>{cell}</td>
                  ))}
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <!-- Zajęcia indywidualne 60 min -->
      <div class="mt-10">
        <h3 class="text-lg font-bold text-slate-900">{individual60Pricing.title}</h3>
        {individual60Pricing.subtitle && (
          <p class="text-sm text-slate-600 mt-1">{individual60Pricing.subtitle}</p>
        )}
        <div class="mt-4 overflow-x-auto">
          <table class="w-full text-left text-sm">
            <thead>
              <tr class="bg-primary text-white">
                {individual60Pricing.columns.map((col) => (
                  <th class="px-4 py-3 font-bold">{col}</th>
                ))}
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200">
              {individual60Pricing.rows.map((row) => (
                <tr class="hover:bg-slate-50">
                  {row.map((cell, i) => (
                    <td class={`px-4 py-3 ${i === 0 ? 'font-semibold' : ''}`}>{cell}</td>
                  ))}
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <!-- Zajęcia indywidualne 45 min -->
      <div class="mt-10">
        <h3 class="text-lg font-bold text-slate-900">{individual45Pricing.title}</h3>
        {individual45Pricing.subtitle && (
          <p class="text-sm text-slate-600 mt-1">{individual45Pricing.subtitle}</p>
        )}
        <div class="mt-4 overflow-x-auto">
          <table class="w-full text-left text-sm">
            <thead>
              <tr class="bg-primary text-white">
                {individual45Pricing.columns.map((col) => (
                  <th class="px-4 py-3 font-bold">{col}</th>
                ))}
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200">
              {individual45Pricing.rows.map((row) => (
                <tr class="hover:bg-slate-50">
                  {row.map((cell, i) => (
                    <td class={`px-4 py-3 ${i === 0 ? 'font-semibold' : ''}`}>{cell}</td>
                  ))}
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <div class="mt-8 p-4 bg-slate-100 rounded-xl text-sm text-slate-600">
        <p><strong>Uwaga:</strong> Ceny dotyczą jednej osoby. W przypadku zajęć w duecie lub trójce, każdy uczestnik płaci podaną kwotę.</p>
      </div>
    </div>
  </section>

  <!-- Porównanie pakietów -->
  <section class="section section-muted">
    <div class="container-site">
      <h2>Który format wybrać?</h2>
      <p class="mt-4 max-w-3xl text-slate-600">
        Porównaj główne formaty zajęć i wybierz ten, który najlepiej pasuje do Twoich potrzeb.
      </p>

      <div class="mt-8 grid gap-6 md:grid-cols-3">
        <div class="card p-6">
          <div class="text-xs font-bold uppercase tracking-widest text-primary">Lekcje 1:1</div>
          <div class="mt-3 text-2xl font-extrabold text-slate-900">od 100 zł / spotkanie</div>
          <p class="mt-3 text-sm text-slate-600">Pełna personalizacja. Idealne dla osób z konkretnym celem lub specyficznymi potrzebami.</p>
          <ul class="mt-4 space-y-2 text-sm text-slate-600">
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true"></span>
              <span>Tempo dopasowane do Ciebie</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true"></span>
              <span>Elastyczne terminy</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true"></span>
              <span>Najszybszy postęp</span>
            </li>
          </ul>
        </div>

        <div class="card p-6">
          <div class="text-xs font-bold uppercase tracking-widest text-primary">Duet / Trójka</div>
          <div class="mt-3 text-2xl font-extrabold text-slate-900">od 50 zł / spotkanie</div>
          <p class="mt-3 text-sm text-slate-600">Oszczędność + więcej konwersacji. Świetne dla znajomych lub par.</p>
          <ul class="mt-4 space-y-2 text-sm text-slate-600">
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true"></span>
              <span>Niższy koszt na osobę</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true"></span>
              <span>Motywacja od partnera</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true"></span>
              <span>Więcej rozmów niż w dużej grupie</span>
            </li>
          </ul>
        </div>

        <div class="card p-6">
          <div class="text-xs font-bold uppercase tracking-widest text-primary">Kurs grupowy</div>
          <div class="mt-3 text-2xl font-extrabold text-slate-900">od 48 zł / spotkanie</div>
          <p class="mt-3 text-sm text-slate-600">Najniższa cena i stały plan. Dobry dla osób szukających struktury.</p>
          <ul class="mt-4 space-y-2 text-sm text-slate-600">
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true"></span>
              <span>Najniższa cena za spotkanie</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true"></span>
              <span>Regularny harmonogram</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-primary" aria-hidden="true"></span>
              <span>Nauka z innymi osobami</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <CTASection
    title="Chcesz dopasować plan do swoich potrzeb?"
    description="Napisz, jaki masz poziom, cel i preferowane godziny — przygotujemy propozycję pakietu i dokładną wycenę."
  />
</MainLayout>
