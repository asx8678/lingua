---
interface Testimonial {
  name: string;
  context: string;
  text: string;
  rating: number;
  date?: string;
}

interface Props {
  testimonial: Testimonial;
  compact?: boolean;
}

const { testimonial, compact = false } = Astro.props;
const dateValue = testimonial.date ? new Date(testimonial.date) : null;
const formattedDate = dateValue
  ? new Intl.DateTimeFormat("pl-PL", { dateStyle: "medium" }).format(dateValue)
  : null;
const stars = Array.from({ length: 5 }, (_, index) => index + 1);
const ratingLabel = `Ocena ${testimonial.rating} na 5 gwiazdek`;

// Tailwind class constants
const card = "rounded-2xl border border-slate-100 bg-white transition-all duration-300 hover:shadow-soft hover:border-slate-200";
---

<article class={`${card} ${compact ? "p-5" : "p-6"}`}>
  <div class="flex items-start justify-between gap-4">
    <div>
      <div class="text-sm font-semibold text-slate-900">
        {testimonial.name}
      </div>
      <div class="mt-0.5 text-xs text-slate-500">{testimonial.context}</div>
    </div>
    {
      formattedDate && (
        <time class="text-xs text-slate-400" datetime={testimonial.date}>
          {formattedDate}
        </time>
      )
    }
  </div>
  <p class="mt-4 text-sm text-slate-600 leading-relaxed">"{testimonial.text}"</p>
  <div class="mt-4 flex items-center gap-1.5">
    <div class="flex gap-0.5" role="img" aria-label={ratingLabel}>
      {
        stars.map((star) => (
          <svg
            class={`h-4 w-4 ${star <= testimonial.rating ? "text-amber-400" : "text-slate-200"}`}
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))
      }
    </div>
    <span class="text-xs text-slate-400">{testimonial.rating}/5</span>
  </div>
</article>
