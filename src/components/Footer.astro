---
import Logo from "./Logo.astro";
import { subjects } from "../data/subjects";
import {
  CONTACT_EMAIL,
  CONTACT_PHONE,
  BRAND_NAME,
  BUSINESS,
  FULL_ADDRESS,
} from "../config/site";

const year = new Date().getFullYear();

const hasEmail = !!CONTACT_EMAIL;
const hasPhone = !!CONTACT_PHONE;
const contactFormHref = "/kontakt";
const addressLine = FULL_ADDRESS || BUSINESS.city;
const hasHours = Boolean(BUSINESS.openingHours);

// Tailwind class constants
const linkMuted = "text-slate-500 transition-colors duration-150 hover:text-slate-700";
const chip = "inline-flex items-center rounded-full border border-slate-200/80 bg-white px-2 py-0.5 text-xs text-slate-500";

const socialLinks = [
  {
    name: "Facebook",
    url: BUSINESS.social.facebook,
    icon: "M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z",
  },
  {
    name: "Instagram",
    url: BUSINESS.social.instagram,
    icon: "M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z",
  },
].filter((link) => link.url);
---

<footer class="border-t border-slate-200/80 bg-slate-50/60">
  <div class="mx-auto w-full max-w-7xl px-6 py-8">
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-5">
      <div class="sm:col-span-2 lg:col-span-1">
        <Logo />
        <p class="mt-2 text-xs text-slate-500 leading-relaxed max-w-[200px]">
          Szkoła języków obcych i matematyki w Legionowie.
        </p>
        {
          socialLinks.length > 0 && (
            <div class="mt-3 flex gap-2">
              {socialLinks.map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-slate-400 transition hover:text-primary"
                  aria-label={`${BRAND_NAME} na ${link.name}`}
                >
                  <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                    <path d={link.icon} />
                  </svg>
                </a>
              ))}
            </div>
          )
        }
      </div>

      <nav aria-labelledby="footer-offer-heading">
        <h2 id="footer-offer-heading" class="text-[10px] font-semibold uppercase tracking-wider text-slate-400">Oferta</h2>
        <ul class="mt-2 flex flex-col gap-1.5 text-xs">
          <li><a class={`${linkMuted} no-underline`} href="/angielski-stacjonarnie">Angielski stacjonarnie</a></li>
          <li><a class={`${linkMuted} no-underline`} href="/angielski-online">Angielski online</a></li>
          <li><a class={`${linkMuted} no-underline`} href="/lekcje-indywidualne">Lekcje indywidualne</a></li>
          <li><a class={`${linkMuted} no-underline`} href="/kursy-grupowe">Kursy grupowe</a></li>
        </ul>
      </nav>

      <nav aria-labelledby="footer-info-heading">
        <h2 id="footer-info-heading" class="text-[10px] font-semibold uppercase tracking-wider text-slate-400">Informacje</h2>
        <ul class="mt-2 flex flex-col gap-1.5 text-xs">
          <li><a class={`${linkMuted} no-underline`} href="/cennik">Cennik</a></li>
          <li><a class={`${linkMuted} no-underline`} href="/opinie">Opinie</a></li>
          <li><a class={`${linkMuted} no-underline`} href="/o-nas">O nas</a></li>
          <li><a class={`${linkMuted} no-underline`} href="/blog">Blog</a></li>
          <li><a class={`${linkMuted} no-underline`} href="/kontakt">Kontakt</a></li>
        </ul>
      </nav>

      <div>
        <h2 class="text-[10px] font-semibold uppercase tracking-wider text-slate-400">Uczymy</h2>
        <div class="mt-2 flex flex-wrap gap-1">
          {subjects.map((subject) => <span class={chip}>{subject}</span>)}
        </div>
      </div>

      <address class="not-italic">
        <h2 class="text-[10px] font-semibold uppercase tracking-wider text-slate-400">Kontakt</h2>
        <div class="mt-2 flex flex-col gap-1 text-xs">
          {
            hasEmail ? (
              <a class={`${linkMuted} no-underline`} href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a>
            ) : (
              <a class={`${linkMuted} no-underline`} href={contactFormHref}>Formularz kontaktowy</a>
            )
          }
          {
            hasPhone && (
              <a class={`${linkMuted} no-underline`} href={`tel:${CONTACT_PHONE}`}>{CONTACT_PHONE}</a>
            )
          }
          {addressLine && <span class="text-slate-500">{addressLine}</span>}
          {hasHours && <span class="text-slate-500">{BUSINESS.openingHours}</span>}
        </div>
      </address>
    </div>

    <div class="mt-6 flex flex-col items-center justify-between gap-2 border-t border-slate-200/60 pt-4 text-[10px] text-slate-400 sm:flex-row">
      <p>© {year} {BRAND_NAME}</p>
      <a class="text-slate-400 no-underline transition-colors duration-150 hover:text-slate-600" href="/privacy">Polityka prywatności</a>
    </div>
  </div>
</footer>
