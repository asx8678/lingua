---
import { PRIMARY_CTA, SECONDARY_CTA } from "../config/site";

interface Props {
  title: string;
  description: string;
  primaryLabel?: string;
  primaryHref?: string;
  secondaryLabel?: string | null;
  secondaryHref?: string;
  note?: string;
}

const {
  title,
  description,
  primaryLabel = PRIMARY_CTA.label,
  primaryHref = PRIMARY_CTA.href,
  secondaryLabel = SECONDARY_CTA.label,
  secondaryHref = SECONDARY_CTA.href,
  note,
} = Astro.props;
---

<section class="section">
  <div class="container-site">
    <div class="cta-panel">
      <h2 class="text-2xl sm:text-3xl">{title}</h2>
      <p class="mx-auto mt-4 max-w-2xl">{description}</p>

      <div class="mt-8 flex flex-wrap items-center justify-center gap-3">
        <a class="btn btn-primary" href={primaryHref}>{primaryLabel}</a>
        {
          secondaryLabel && secondaryHref && (
            <a class="btn btn-secondary" href={secondaryHref}>
              {secondaryLabel}
            </a>
          )
        }
      </div>

      {note && <p class="mt-4 text-sm text-slate-500">{note}</p>}
    </div>
  </div>
</section>
