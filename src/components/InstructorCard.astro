---
const { name, role, languages = [], bio } = Astro.props;

const initials = String(name)
  .split(" ")
  .filter(Boolean)
  .map((p) => p[0]?.toUpperCase())
  .join("")
  .slice(0, 2);
---
<div class="card p-6">
  <div class="flex items-center gap-4">
    <div class="grid h-14 w-14 place-items-center rounded-2xl border border-primary/20 bg-gradient-to-br from-primary/20 to-white font-black text-primary shadow-sm" aria-hidden="true">
      {initials}
    </div>

    <div>
      <div class="text-lg font-black tracking-tight text-slate-900">{name}</div>
      <div class="mt-1 text-sm font-semibold text-slate-600">{role}</div>
    </div>
  </div>

  {languages.length > 0 && (
    <p class="mt-4 text-sm text-slate-600">
      <span class="font-bold text-slate-900">JÄ™zyki:</span> {languages.join(", ")}
    </p>
  )}

  {bio && <p class="mt-4 text-sm text-slate-600">{bio}</p>}
</div>
