---
import { BRAND_NAME } from "../config/site";

const { href = "/", showText = true } = Astro.props;
---
<a href={href} class="flex items-center gap-3 no-underline" aria-label={`${BRAND_NAME} (strona główna)`}>
  <svg class="h-9 w-9" viewBox="0 0 64 64" role="img" aria-hidden="true">
    <defs>
      <linearGradient id="lg" x1="0" y1="0" x2="1" y2="1">
        <stop offset="0" stop-color="#0052CC" />
        <stop offset="1" stop-color="#1D4ED8" />
      </linearGradient>
    </defs>
    <rect x="4" y="4" width="56" height="56" rx="14" fill="url(#lg)" />
    <path d="M18 26L32 20l14 6-14 6-14-6z" fill="#fff" opacity="0.95" />
    <path d="M24 30v6c0 1.8 3.6 4 8 4s8-2.2 8-4v-6l-8 3.5L24 30z" fill="#fff" opacity="0.95" />
    <path d="M46 26v9" stroke="#fff" stroke-width="2" stroke-linecap="round" opacity="0.95" />
    <circle cx="46" cy="36" r="2" fill="#fff" opacity="0.95" />
  </svg>

  {showText && <span class="text-lg font-black tracking-tight text-slate-900">{BRAND_NAME}</span>}
</a>
