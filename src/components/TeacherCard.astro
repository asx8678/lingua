---
import { TEACHER_SPECIALTIES } from "../config/site";
import type { Teacher } from "../data/teachers";

interface Props {
  teacher: Teacher;
  loading?: "lazy" | "eager";
}

const { teacher, loading = "lazy" } = Astro.props;

const imageSrc =
  teacher.image && teacher.image.length > 0 ? teacher.image : "/images/teachers/placeholder.svg";
const imageAlt = `${teacher.name}, ${teacher.role} – ${teacher.languages.join(", ")}`;
const specialties = teacher.specialties ?? TEACHER_SPECIALTIES[teacher.name] ?? [];

const langChip = "inline-flex items-center rounded-full bg-slate-100/80 px-2 py-0.5 text-[10px] font-medium text-slate-500";
---

<article class="card group flex h-full flex-col overflow-hidden">
  <div class="aspect-[4/3] w-full overflow-hidden bg-slate-50">
    <img
      src={imageSrc}
      alt={imageAlt}
      loading={loading}
      width="320"
      height="240"
      decoding="async"
      class="h-full w-full object-cover"
    />
  </div>
  <div class="flex flex-1 flex-col p-4">
    <h3 class="text-sm font-semibold text-slate-900">{teacher.name}</h3>
    <p class="mt-0.5 text-xs text-slate-500">{teacher.role}</p>
    {
      specialties.length > 0 && (
        <div class="mt-2">
          <div class="text-[10px] font-medium uppercase tracking-wider text-slate-500">
            Specjalizacje
          </div>
          <div class="mt-0.5 text-xs text-slate-600">{specialties.join(" · ")}</div>
        </div>
      )
    }
    <div class="mt-auto pt-3 flex flex-wrap gap-1">
      {teacher.languages.map((language) => <span class={langChip}>{language}</span>)}
    </div>
  </div>
</article>
