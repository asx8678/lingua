---
import type { Teacher } from "../data/teachers";

interface Props {
  teacher: Teacher;
  loading?: "lazy" | "eager";
}

const { teacher, loading = "lazy" } = Astro.props;

const imageSrc =
  teacher.image && teacher.image.length > 0 ? teacher.image : "/images/teachers/placeholder.svg";
const imageAlt = `${teacher.name}, ${teacher.role} â€“ ${teacher.languages.join(", ")}`;
---

<article class="card flex h-full flex-col overflow-hidden">
  <div class="aspect-[16/9] w-full overflow-hidden bg-slate-100">
    <img
      src={imageSrc}
      alt={imageAlt}
      loading={loading}
      width="320"
      height="180"
      decoding="async"
      class="h-full w-full object-cover"
    />
  </div>
  <div class="flex flex-1 flex-col p-6">
    <h3 class="text-lg font-extrabold text-slate-900">{teacher.name}</h3>
    <p class="mt-1 text-sm text-slate-600">{teacher.role}</p>
    <div class="mt-4 flex flex-wrap gap-2">
      {teacher.languages.map((language) => <span class="chip">{language}</span>)}
    </div>
  </div>
</article>
