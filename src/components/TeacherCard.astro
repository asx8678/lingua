---
import { TEACHER_SPECIALTIES } from "../config/site";
import type { Teacher } from "../data/teachers";

interface Props {
  teacher: Teacher;
  loading?: "lazy" | "eager";
}

const { teacher, loading = "lazy" } = Astro.props;

const imageSrc =
  teacher.image && teacher.image.length > 0 ? teacher.image : "/images/teachers/placeholder.svg";
const imageAlt = `${teacher.name}, ${teacher.role} – ${teacher.languages.join(", ")}`;
const specialties = teacher.specialties ?? TEACHER_SPECIALTIES[teacher.name] ?? [];

// Tailwind class constants
const card = "rounded-2xl border border-slate-200/80 bg-white shadow-sm transition-shadow hover:shadow-md";
const chip = "inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1.5 text-xs font-semibold text-slate-600";
---

<article class={`${card} group flex h-full flex-col overflow-hidden`}>
  <div class="aspect-[4/3] w-full overflow-hidden bg-slate-100">
    <img
      src={imageSrc}
      alt={imageAlt}
      loading={loading}
      width="320"
      height="240"
      decoding="async"
      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </div>
  <div class="flex flex-1 flex-col p-5">
    <h3 class="text-base font-extrabold text-slate-900">{teacher.name}</h3>
    <p class="mt-1 text-sm text-slate-500">{teacher.role}</p>
    {
      specialties.length > 0 && (
        <div class="mt-3 text-xs text-slate-600">
          <div class="text-[11px] font-bold uppercase tracking-widest text-slate-400">
            Specjalizacje
          </div>
          <div class="mt-1">{specialties.join(" · ")}</div>
        </div>
      )
    }
    <div class="mt-auto pt-4 flex flex-wrap gap-1.5">
      {teacher.languages.map((language) => <span class={`${chip} text-[11px]`}>{language}</span>)}
    </div>
  </div>
</article>
