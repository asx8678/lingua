---
import { TEACHER_SPECIALTIES } from "../config/site";
import type { Teacher } from "../data/teachers";

interface Props {
  teacher: Teacher;
  loading?: "lazy" | "eager";
}

const { teacher, loading = "lazy" } = Astro.props;

const imageSrc =
  teacher.image && teacher.image.length > 0 ? teacher.image : "/images/teachers/placeholder.svg";
const imageAlt = `${teacher.name}, ${teacher.role} – ${teacher.languages.join(", ")}`;
const specialties = teacher.specialties ?? TEACHER_SPECIALTIES[teacher.name] ?? [];

// Tailwind class constants
const card = "rounded-2xl border border-slate-100 bg-white transition-all duration-300 hover:shadow-soft hover:border-slate-200";
const chip = "inline-flex items-center rounded-full bg-slate-50 px-2.5 py-1 text-[11px] font-medium text-slate-500";
---

<article class={`${card} group flex h-full flex-col overflow-hidden`}>
  <div class="aspect-[4/3] w-full overflow-hidden bg-slate-100">
    <img
      src={imageSrc}
      alt={imageAlt}
      loading={loading}
      width="320"
      height="240"
      decoding="async"
      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.02]"
    />
  </div>
  <div class="flex flex-1 flex-col p-5">
    <h3 class="text-base font-bold text-slate-900">{teacher.name}</h3>
    <p class="mt-1 text-sm text-slate-500">{teacher.role}</p>
    {
      specialties.length > 0 && (
        <div class="mt-3">
          <div class="text-[10px] font-semibold uppercase tracking-wider text-slate-400">
            Specjalizacje
          </div>
          <div class="mt-1 text-xs text-slate-600">{specialties.join(" · ")}</div>
        </div>
      )
    }
    <div class="mt-auto pt-4 flex flex-wrap gap-1.5">
      {teacher.languages.map((language) => <span class={chip}>{language}</span>)}
    </div>
  </div>
</article>
