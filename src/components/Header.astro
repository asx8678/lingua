---
import Logo from "./Logo.astro";
import {
  BRAND_TAGLINE,
  CTA_PRIMARY_HREF,
  CTA_PRIMARY_LABEL,
  CTA_PRIMARY_REL,
  CTA_PRIMARY_TARGET,
} from "../config/site";

interface Props {
  currentPath?: string;
}

const { currentPath = "/" } = Astro.props;

const nav = [
  { href: "/oferta", label: "Oferta" },
  { href: "/cennik", label: "Cennik" },
  { href: "/o-nas", label: "O nas" },
  { href: "/test", label: "Test" },
  { href: "/kontakt", label: "Kontakt" },
];

const isActive = (href: string) => {
  if (href === "/") return currentPath === "/";
  return currentPath === href || currentPath.startsWith(href + "/");
};

const linkClass = (href: string) =>
  isActive(href)
    ? "px-3 py-1.5 text-sm font-medium text-primary"
    : "px-3 py-1.5 text-sm font-medium text-slate-600 transition-colors duration-150 hover:text-slate-900";

---

<header class="sticky top-0 z-50 border-b border-slate-200/60 bg-white/90 backdrop-blur-xl shadow-md">
  <div class="mx-auto w-full max-w-7xl px-6 flex items-center justify-between h-16">
    <div class="flex items-center gap-3">
      <Logo />
      <span class="hidden text-xs font-semibold text-slate-500 sm:inline">{BRAND_TAGLINE}</span>
    </div>

    <nav class="hidden items-center gap-1 lg:flex" aria-label="Główna nawigacja">
      {
        nav.map((item) => (
          <a
            href={item.href}
            class={linkClass(item.href)}
            aria-current={isActive(item.href) ? "page" : undefined}
          >
            {item.label}
          </a>
        ))
      }
    </nav>

    <div class="hidden items-center gap-3 lg:flex">
      <a
        class="btn btn-primary px-6 py-2.5 text-sm font-semibold shadow-lg shadow-primary/25 hover:shadow-xl hover:shadow-primary/35"
        href={CTA_PRIMARY_HREF}
        target={CTA_PRIMARY_TARGET}
        rel={CTA_PRIMARY_REL}
        data-track="cta_primary"
        data-track-label={CTA_PRIMARY_LABEL}
      >
        {CTA_PRIMARY_LABEL}
      </a>
    </div>

    <details class="relative lg:hidden" id="mobile-menu">
      <summary
        class="list-none cursor-pointer select-none rounded-xl border border-slate-200/60 bg-white/80 backdrop-blur-xl px-4 py-2 text-sm font-semibold text-slate-600 transition-all duration-200 hover:border-primary/30 hover:bg-primary/5 hover:text-primary hover:shadow-md"
        aria-label="Menu nawigacji"
        aria-expanded="false"
        aria-controls="mobile-menu-content"
      >
        <span class="inline-flex items-center gap-2">
          Menu
          <svg
            viewBox="0 0 24 24"
            class="h-4 w-4"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <path d="M4 6h16"></path>
            <path d="M4 12h16"></path>
            <path d="M4 18h16"></path>
          </svg>
        </span>
      </summary>

      <div
        class="absolute right-0 mt-2 w-[min(90vw,18rem)] rounded-2xl border border-slate-200/60 bg-white/95 backdrop-blur-xl p-1.5 shadow-2xl shadow-slate-200/50"
        role="dialog"
        aria-modal="true"
        aria-label="Menu nawigacji"
        aria-hidden="true"
        id="mobile-menu-content"
      >
        {
          nav.map((item) => (
            <a
              href={item.href}
              class={
                isActive(item.href)
                  ? "block rounded-xl bg-gradient-to-r from-primary/10 to-primary/5 px-4 py-2.5 text-sm font-bold text-primary"
                  : "block rounded-xl px-4 py-2.5 text-sm font-semibold text-slate-600 transition-all duration-200 hover:bg-slate-50 hover:text-slate-900"
              }
              aria-current={isActive(item.href) ? "page" : undefined}
            >
              {item.label}
            </a>
          ))
        }

        <div class="mt-1.5 rounded-xl bg-gradient-to-r from-slate-50/80 to-slate-100/60 px-3 py-3">
          <a
            class="btn btn-primary px-4 py-2.5 w-full text-sm font-semibold shadow-md shadow-primary/20"
            href={CTA_PRIMARY_HREF}
            target={CTA_PRIMARY_TARGET}
            rel={CTA_PRIMARY_REL}
            data-track="cta_primary"
            data-track-label={CTA_PRIMARY_LABEL}
          >
            {CTA_PRIMARY_LABEL}
          </a>
        </div>
      </div>
    </details>

    <script is:inline>
      const menu = document.getElementById("mobile-menu");
      const menuContent = document.getElementById("mobile-menu-content");
      const summary = menu?.querySelector("summary");

      function updateAriaExpanded() {
        const isOpen = menu?.hasAttribute("open");
        summary?.setAttribute("aria-expanded", String(isOpen));
        menuContent?.setAttribute("aria-hidden", String(!isOpen));
      }

      function getFocusableElements() {
        if (!menuContent) return [];
        return Array.from(
          menuContent.querySelectorAll('a, button, [tabindex]:not([tabindex="-1"])')
        );
      }

      function trapFocus(e) {
        if (!menu?.hasAttribute("open")) return;

        const focusable = getFocusableElements();
        if (!focusable.length) return;

        const first = focusable[0];
        const last = focusable[focusable.length - 1];

        if (e.key === "Tab") {
          if (e.shiftKey && document.activeElement === first) {
            e.preventDefault();
            last.focus();
          } else if (!e.shiftKey && document.activeElement === last) {
            e.preventDefault();
            first.focus();
          }
        }
      }

      menu?.addEventListener("toggle", updateAriaExpanded);

      menuContent?.addEventListener("click", (e) => {
        if (e.target.tagName === "A") {
          menu?.removeAttribute("open");
        }
      });

      document.addEventListener("click", (e) => {
        if (menu?.hasAttribute("open") && !menu.contains(e.target)) {
          menu.removeAttribute("open");
        }
      });

      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && menu?.hasAttribute("open")) {
          menu.removeAttribute("open");
          summary?.focus();
        }
        trapFocus(e);
      });
    </script>
  </div>
</header>
