---
import Logo from "./Logo.astro";
import {
  BRAND_TAGLINE,
  CTA_PRIMARY_HREF,
  CTA_PRIMARY_LABEL,
  CTA_PRIMARY_REL,
  CTA_PRIMARY_TARGET,
} from "../config/site";

interface Props {
  currentPath?: string;
}

const { currentPath = "/" } = Astro.props;

const nav = [
  { href: "/oferta", label: "Oferta" },
  { href: "/cennik", label: "Cennik" },
  { href: "/o-nas", label: "O nas" },
  { href: "/test", label: "Test" },
  { href: "/kontakt", label: "Kontakt" },
];

const isActive = (href: string) => {
  if (href === "/") return currentPath === "/";
  return currentPath === href || currentPath.startsWith(href + "/");
};

const linkClass = (href: string) =>
  isActive(href)
    ? "px-3 py-1.5 text-sm font-medium text-primary"
    : "px-3 py-1.5 text-sm font-medium text-slate-600 transition-colors duration-150 hover:text-slate-900";

---

<header class="sticky top-0 z-50 border-b border-slate-200/80 bg-white/98 backdrop-blur-sm">
  <div class="mx-auto w-full max-w-7xl px-6 flex items-center justify-between h-14">
    <div class="flex items-center gap-2.5">
      <Logo />
      <span class="hidden text-xs text-slate-400 sm:inline">{BRAND_TAGLINE}</span>
    </div>

    <nav class="hidden items-center gap-1 lg:flex" aria-label="Główna nawigacja">
      {
        nav.map((item) => (
          <a
            href={item.href}
            class={linkClass(item.href)}
            aria-current={isActive(item.href) ? "page" : undefined}
          >
            {item.label}
          </a>
        ))
      }
    </nav>

    <div class="hidden items-center gap-3 lg:flex">
      <a
        class="btn btn-primary px-4 py-2"
        href={CTA_PRIMARY_HREF}
        target={CTA_PRIMARY_TARGET}
        rel={CTA_PRIMARY_REL}
        data-track="cta_primary"
        data-track-label={CTA_PRIMARY_LABEL}
      >
        {CTA_PRIMARY_LABEL}
      </a>
    </div>

    <details class="relative lg:hidden" id="mobile-menu">
      <summary
        class="list-none cursor-pointer select-none rounded-full border border-slate-200/80 bg-white px-3.5 py-1.5 text-sm font-medium text-slate-600 transition-colors duration-150 hover:bg-slate-50 hover:text-slate-900"
        aria-label="Menu nawigacji"
        aria-expanded="false"
        aria-controls="mobile-menu-content"
      >
        <span class="inline-flex items-center gap-2">
          Menu
          <svg
            viewBox="0 0 24 24"
            class="h-4 w-4"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <path d="M4 6h16"></path>
            <path d="M4 12h16"></path>
            <path d="M4 18h16"></path>
          </svg>
        </span>
      </summary>

      <div
        class="absolute right-0 mt-2 w-[min(90vw,18rem)] rounded-xl border border-slate-200/80 bg-white p-1 shadow-soft"
        role="dialog"
        aria-modal="true"
        aria-label="Menu nawigacji"
        id="mobile-menu-content"
      >
        {
          nav.map((item) => (
            <a
              href={item.href}
              class={
                isActive(item.href)
                  ? "block rounded-lg bg-slate-50 px-3 py-2 text-sm font-medium text-primary"
                  : "block rounded-lg px-3 py-2 text-sm font-medium text-slate-600 transition-colors duration-150 hover:bg-slate-50 hover:text-slate-900"
              }
              aria-current={isActive(item.href) ? "page" : undefined}
            >
              {item.label}
            </a>
          ))
        }

        <div class="mt-1 rounded-lg bg-slate-50 px-2 py-2">
          <a
            class="btn btn-primary px-4 py-2 w-full"
            href={CTA_PRIMARY_HREF}
            target={CTA_PRIMARY_TARGET}
            rel={CTA_PRIMARY_REL}
            data-track="cta_primary"
            data-track-label={CTA_PRIMARY_LABEL}
          >
            {CTA_PRIMARY_LABEL}
          </a>
        </div>
      </div>
    </details>

    <script is:inline>
      const menu = document.getElementById("mobile-menu");
      const menuContent = document.getElementById("mobile-menu-content");
      const summary = menu?.querySelector("summary");

      function updateAriaExpanded() {
        const isOpen = menu?.hasAttribute("open");
        summary?.setAttribute("aria-expanded", String(isOpen));
      }

      function getFocusableElements() {
        if (!menuContent) return [];
        return Array.from(
          menuContent.querySelectorAll('a, button, [tabindex]:not([tabindex="-1"])')
        );
      }

      function trapFocus(e) {
        if (!menu?.hasAttribute("open")) return;

        const focusable = getFocusableElements();
        if (!focusable.length) return;

        const first = focusable[0];
        const last = focusable[focusable.length - 1];

        if (e.key === "Tab") {
          if (e.shiftKey && document.activeElement === first) {
            e.preventDefault();
            last.focus();
          } else if (!e.shiftKey && document.activeElement === last) {
            e.preventDefault();
            first.focus();
          }
        }
      }

      menu?.addEventListener("toggle", updateAriaExpanded);

      menuContent?.addEventListener("click", (e) => {
        if (e.target.tagName === "A") {
          menu?.removeAttribute("open");
        }
      });

      document.addEventListener("click", (e) => {
        if (menu?.hasAttribute("open") && !menu.contains(e.target)) {
          menu.removeAttribute("open");
        }
      });

      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && menu?.hasAttribute("open")) {
          menu.removeAttribute("open");
          summary?.focus();
        }
        trapFocus(e);
      });
    </script>
  </div>
</header>
